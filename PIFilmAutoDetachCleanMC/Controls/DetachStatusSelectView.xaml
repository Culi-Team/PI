<Window x:Class="PIFilmAutoDetachCleanMC.Controls.DetachStatusSelectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Detach Status Select" Height="150" Width="400">
    <Border Padding="20">
        <UniformGrid Columns="2">
            <Button Content="Detached" 
                    Margin="0 0 20 0"
                    FontSize="16"
                    Background="LightGreen"
                    Click="Detached_Select_Click"/>
            <Button Content="Not Detached"
                    Margin="20 0 0 0"
                    FontSize="16"
                    Background="Yellow"
                    Click="Not_Detached_Select_Click"/>
        </UniformGrid>
    </Border>

</Window>
