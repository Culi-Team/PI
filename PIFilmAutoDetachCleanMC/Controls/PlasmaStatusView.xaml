<UserControl x:Class="PIFilmAutoDetachCleanMC.Controls.PlasmaStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Style.Setters>
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style.Setters>
        </Style>
        <Style TargetType="TextBox"
               BasedOn="{StaticResource TextBoxWithNameLeftStyle}">
            <Style.Setters>
                <Setter Property="IsReadOnly"
                        Value="True" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Text="{Binding Voltage,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Voltage" />
        <Label Grid.Column="1"
               Content="[KV]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="1"
                 Text="{Binding Power,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Power" />
        <Label Grid.Column="1"
               Grid.Row="1"
               Content="[kW]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="2"
                 Text="{Binding N2FlowRate,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="N2 Flow Rate" />
        <Label Grid.Column="1"
               Grid.Row="2"
               Content="[LPM]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="3"
                 Text="{Binding CDAFlowRate,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="CDA Flow Rate" />
        <Label Grid.Column="1"
               Grid.Row="3"
               Content="[LPM]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="4"
                 Text="{Binding Temperature,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Temperature" />
        <Label Grid.Column="1"
               Grid.Row="4"
               Content="[°C]" />
    </Grid>
</UserControl>
