<Window x:Class="PIFilmAutoDetachCleanMC.Controls.UnloadGlassSelectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        Width="800"
        Height="500"
        Title="UnloadGlassSelectView">
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="BorderBrush"
                    Value="LightGray" />
            <Setter Property="CornerRadius"
                    Value="10" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <UniformGrid Rows="4">
            <Border Width="250"
                    Height="50"
                    Tag="4"
                    Background="{Binding IsUnloadGlass4,Converter={StaticResource BoolToBrushConverter}}"
                    MouseUp="GlassSelect_MouseUp">
                <Label Content="Unload Glass 4" />
            </Border>
            <Border Width="250"
                    Height="50"
                    Tag="3"
                    Background="{Binding IsUnloadGlass3,Converter={StaticResource BoolToBrushConverter}}"
                    MouseUp="GlassSelect_MouseUp">
                <Label Content="Unload Glass 3" />
            </Border>
            <Border Width="250"
                    Height="50"
                    Tag="2"
                    Background="{Binding IsUnloadGlass2,Converter={StaticResource BoolToBrushConverter}}"
                    MouseUp="GlassSelect_MouseUp">
                <Label Content="Unload Glass 2" />
            </Border>
            <Border Width="250"
                    Height="50"
                    Tag="1"
                    Background="{Binding IsUnloadGlass1,Converter={StaticResource BoolToBrushConverter}}"
                    MouseUp="GlassSelect_MouseUp">
                <Label Content="Unload Glass 1" />
            </Border>
        </UniformGrid>

        <UniformGrid Grid.Row="1">
            <Button Content="Confirm"
                    FontSize="20"
                    Margin="5 0 20 0"
                    Click="ConfirmButton_Click"
                    Background="LightGreen" />
            <Button Content="Exit"
                    Click="ButtonExit_Click"
                    FontSize="20"
                    Margin="20 0 5 0" />
        </UniformGrid>
    </Grid>
</Window>
