<UserControl x:Class="PIFilmAutoDetachCleanMC.Controls.CleanUnitStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Style.Setters>
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style.Setters>
        </Style>
        <Style TargetType="TextBox"
               BasedOn="{StaticResource TextBoxWithNameLeftStyle}">
            <Style.Setters>
                <Setter Property="IsReadOnly"
                        Value="True" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2"
                Background="Beige">
            <Label Content="{Binding Name}"
                   FontWeight="Bold"
                   HorizontalContentAlignment="Center"
                   FontSize="20"/>
        </Border>
        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="1"
                 Text="{Binding CleanVolume,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Clean Volume" />
        <Label Grid.Column="1"
               Grid.Row="1"
               Content="[mL]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="2"
                 Text="{Binding WinderTorque,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Winder Torque" />
        <Label Grid.Column="1"
               Grid.Row="2"
               Content="[%]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="3"
                 Text="{Binding UnWinderTorque,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="UnWinder Torque" />
        <Label Grid.Column="1"
               Grid.Row="3"
               Content="[%]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="4"
                 Text="{Binding CylinderPressure,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Pressure" />
        <Label Grid.Column="1"
               Grid.Row="4"
               Content="[mPa]" />

        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="5"
                 Text="{Binding CleanHorizontalCount,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Clean Horizontal Count" />
        <Label Grid.Column="1"
               Grid.Row="5"
               Content="" />
        <TextBox Style="{StaticResource TextBoxWithNameLeftStyle}"
                 Grid.Row="6"
                 Text="{Binding CleanVerticalCount,Mode=OneWay,StringFormat='{}{0:0.###}'}"
                 Tag="Clean Vertical Count" />
        <Label Grid.Column="1"
               Grid.Row="6"
               Content="" />
    </Grid>
</UserControl>
