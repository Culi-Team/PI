<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <Configurations>Debug;Release;Simulation</Configurations>
    <BaseOutputPath></BaseOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Simulation|AnyCPU'">
    <DefineConstants>$(DefineConstants);SIMULATION</DefineConstants>
    <XamlDebuggingInformation>True</XamlDebuggingInformation>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Process\Define\**" />
    <Compile Remove="Process\Steps\**" />
    <EmbeddedResource Remove="Process\Define\**" />
    <EmbeddedResource Remove="Process\Steps\**" />
    <None Remove="Process\Define\**" />
    <None Remove="Process\Steps\**" />
    <Page Remove="Process\Define\**" />
    <Page Remove="Process\Steps\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EQX.Core\EQX.Core\EQX.Core.csproj" />
    <ProjectReference Include="..\EQX.Device\EQX.Device\EQX.Device.csproj" />
    <ProjectReference Include="..\EQX.InOut\EQX.InOut\EQX.InOut.csproj" />
    <ProjectReference Include="..\EQX.Motion\EQX.Motion\EQX.Motion.csproj" />
    <ProjectReference Include="..\EQX.Process\EQX.Process\EQX.Process.csproj" />
    <ProjectReference Include="..\EQX.ThirdParty\EQX.ThirdParty\EQX.ThirdParty.csproj" />
    <ProjectReference Include="..\EQX.UI\EQX.UI\EQX.UI.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="PIFilmAutoDetachCleanMCLog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Converters\JsonConverters\" />
    <Folder Include="Defines\Process\Step\01.InConveyorProcess\" />
    <Folder Include="Defines\Process\Step\03.BufferConveyorProcess\" />
    <Folder Include="Defines\Process\Step\04.OutWorkConveyorProcess\" />
    <Folder Include="Defines\Process\Step\05.OutConveyorProcess\" />
  </ItemGroup>

</Project>
