<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.AutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             mc:Ignorable="d"
             xmlns:control="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AutoViewModel}}"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="1060"
             d:DesignWidth="1920">
    <UserControl.Resources>
        <Style TargetType="GroupBox"
               x:Key="TextBlockHeaderGroupBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="Black"
                                   VerticalAlignment="Center" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Signal Ellipse Style -->
        <Style x:Key="SignalEllipseStyle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="20" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Fill"
                    Value="Red" />
            <Setter Property="Stroke"
                    Value="White" />
            <Setter Property="StrokeThickness"
                    Value="2" />
        </Style>
        <Style x:Key="DoorIndicatorRectangleStyle"
               TargetType="Rectangle">
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalAlignment"
                    Value="Stretch" />
            <Setter Property="RadiusX"
                    Value="2" />
            <Setter Property="RadiusY"
                    Value="2" />
            <Setter Property="Stroke"
                    Value="Black" />
            <Setter Property="StrokeThickness"
                    Value="1" />
            <Setter Property="Margin"
                    Value="0" />
        </Style>

        <Style x:Key="EmergencyIndicatorImageStyle"
               TargetType="Image">
            <Setter Property="Width"
                    Value="28" />
            <Setter Property="Height"
                    Value="28" />
            <Setter Property="RenderOptions.BitmapScalingMode"
                    Value="HighQuality" />
        </Style>

        <cvt:InputOutputStopConverter x:Key="InputOutputStopConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cvt:BooleanOrToVisibilityConverter x:Key="BooleanOrToVisibilityConverter" />
        <cvt:DoorStatusToBrushConverter x:Key="DoorStatusToBrushConverter" />
        <cvt:EmergencyStatusToImageConverter x:Key="EmergencyStatusToImageConverter" />
    </UserControl.Resources>
    <Grid Margin="10 0 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--OUT CST index-->
            <Grid Grid.Row="0"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <Label Content="Cassette Out"
                           Background="Beige"
                           HorizontalContentAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14" />
                    <Button Content="Reset"
                            Margin="5 0 0 0"
                            Command="{Binding ResetCSTOutCommand}" />
                </UniformGrid>
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                              ItemsSource="{Binding CassetteList.CassetteOut.Cells}"
                              Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteOut.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <!--In CST index-->
            <Grid Grid.Row="5"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="9*" />
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <Label Content="Cassette In"
                           Background="Beige"
                           HorizontalContentAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14" />
                    <Button Content="Reset"
                            Margin="5 0 0 0"
                            Command="{Binding ResetCSTInCommand}" />
                </UniformGrid>
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                              ItemsSource="{Binding CassetteList.CassetteIn.Cells}"
                              Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteIn.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <!-- Machine Image overlay-->
            <Grid Grid.Row="2"
                  Grid.ColumnSpan="9"
                  Grid.RowSpan="3"
                  Panel.ZIndex="0">
                <Image Source="{StaticResource AutoViewImage}"
                       Stretch="Fill" />
            </Grid>
            <!--Emegency Overlay-->
            <Grid Grid.Row="2"
                  Grid.ColumnSpan="9"
                  Grid.RowSpan="3"
                  Panel.ZIndex="2">
                <Canvas x:Name="EmergencyOverlay"
                        Background="Transparent">
                    <Image Style="{StaticResource EmergencyIndicatorImageStyle}"
                           Canvas.Left="146"
                           Canvas.Top="13"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                        <Image.Source>
                            <Binding Path="Devices.Inputs.EmoLoadL.Value"
                                     Converter="{StaticResource EmergencyStatusToImageConverter}" />
                        </Image.Source>
                    </Image>
                    <Image Style="{StaticResource EmergencyIndicatorImageStyle}"
                           Canvas.Left="146"
                           Canvas.Top="360">
                        <Image.Source>
                            <Binding Path="Devices.Inputs.EmoLoadR.Value"
                                     Converter="{StaticResource EmergencyStatusToImageConverter}" />
                        </Image.Source>
                    </Image>
                    <Image Style="{StaticResource EmergencyIndicatorImageStyle}"
                           Canvas.Left="746">
                        <Image.Source>
                            <Binding Path="Devices.Inputs.OpLEmo.Value"
                                     Converter="{StaticResource EmergencyStatusToImageConverter}" />
                        </Image.Source>
                    </Image>
                    <Image Style="{StaticResource EmergencyIndicatorImageStyle}"
                           Canvas.Left="746"
                           Canvas.Top="360">
                        <Image.Source>
                            <Binding Path="Devices.Inputs.OpREmo.Value"
                                     Converter="{StaticResource EmergencyStatusToImageConverter}" />
                        </Image.Source>
                    </Image>
                    <Image Style="{StaticResource EmergencyIndicatorImageStyle}"
                           Canvas.Left="1535"
                           Canvas.Top="13"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top">
                        <Image.Source>
                            <Binding Path="Devices.Inputs.EmoUnloadL.Value"
                                     Converter="{StaticResource EmergencyStatusToImageConverter}" />
                        </Image.Source>
                    </Image>
                    <Image Style="{StaticResource EmergencyIndicatorImageStyle}"
                           Canvas.Left="1535"
                           Canvas.Top="360"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top">
                        <Image.Source>
                            <Binding Path="Devices.Inputs.EmoUnloadR.Value"
                                     Converter="{StaticResource EmergencyStatusToImageConverter}" />
                        </Image.Source>
                    </Image>
                </Canvas>

            </Grid>
            <!--Door Indicators Overlay-->
            <Grid Grid.Row="2"
                  Grid.ColumnSpan="9"
                  Grid.RowSpan="3"
                  Panel.ZIndex="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="420*" />
                        <RowDefinition Height="17*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="361*" />
                        <ColumnDefinition Width="149*" />
                        <ColumnDefinition Width="390*" />
                        <ColumnDefinition Width="110*" />
                        <ColumnDefinition Width="101*" />
                        <ColumnDefinition Width="110*" />
                        <ColumnDefinition Width="115*" />
                        <ColumnDefinition Width="302*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Door Indicators -->
                    <Rectangle Grid.Column="0"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock1L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch1L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="1"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock2L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch2L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="3"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock3L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch3L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="4"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock4L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch4L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="5"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock5L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch5L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="6"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock6L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch6L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="7"
                               Grid.Row="0"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock7L.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch7L.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- Right Door Indicators -->
                    <Rectangle Grid.Column="0"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock1R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch1R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="1"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock2R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch2R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="3"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock3R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch3R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="4"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock4R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch4R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="5"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock5R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch5R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="6"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock6R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch6R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.Column="7"
                               Grid.Row="2"
                               Style="{StaticResource DoorIndicatorRectangleStyle}">
                        <Rectangle.Fill>
                            <MultiBinding Converter="{StaticResource DoorStatusToBrushConverter}">
                                <Binding Path="Devices.Inputs.DoorLock7R.Value" />
                                <Binding Path="Devices.Inputs.DoorLatch7R.Value" />
                            </MultiBinding>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </Grid>
            <!--Status Images Overlay-->
            <Grid Grid.Row="2"
                  Grid.Column="1"
                  Grid.RowSpan="3"
                  Panel.ZIndex="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="1.0*" />
                    <RowDefinition Height="1.27*" />
                </Grid.RowDefinitions>
                <!-- InCSTWork Image overlay-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.35*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.9*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.35*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.22*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource InCSTWorkImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstWorkDetect1.Value" />
                                <Binding Path="Devices.Inputs.InCstWorkDetect2.Value" />
                                <Binding Path="Devices.Inputs.InCstWorkDetect3.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
                <!-- Buffer Image overlay-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.37*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.4*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.34*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.23*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource BufferImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.BufferCstDetect1.Value" />
                                <Binding Path="Devices.Inputs.BufferCstDetect2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
                <!-- OUTCSTWork Image overlay-->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.45*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.15*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource OutCSTWorkImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstWorkDetect1.Value" />
                                <Binding Path="Devices.Inputs.OutCstWorkDetect2.Value" />
                                <Binding Path="Devices.Inputs.OutCstWorkDetect3.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="1.0*" />
                    <RowDefinition Height="1.27*" />
                </Grid.RowDefinitions>
                <!-- InCST Image overlay-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.13*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.6*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource InCSTImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstDetect1.Value" />
                                <Binding Path="Devices.Inputs.InCstDetect2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
                <!-- OUTCST Image overlay-->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.49*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.17*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.33*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource OutCSTImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstDetect1.Value" />
                                <Binding Path="Devices.Inputs.OutCstDetect2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
            </Grid>

            <Grid Grid.Column="2"
                  Grid.Row="2"
                  Grid.RowSpan="3"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.1*" />
                    <RowDefinition />
                    <RowDefinition Height="1.2*" />
                </Grid.RowDefinitions>

                <!-- VinylClean Image overlay-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1.5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.45*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.13*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource VinylCleanImageDetach}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.VinylCleanFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
                <!-- FixtureAlign Image overlay-->
                <Grid Grid.Row="2"
                        Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.65*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.57*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource AlignFixtureImageDetach}"
                           Grid.Column="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
                <!-- Detach Image overlay-->
                <Grid Grid.Row="1"
                        Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.22*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.2*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.65*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.05*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource GlassDetach}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.DetachFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
                <!-- RemoveFilm Image overlay-->
                <Grid Grid.Row="0"
                        Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1.9*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.56*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource RemoveZoneImageDetach}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.RemoveZoneFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Grid>
            </Grid>
            <Grid Grid.Row="3"
                  Grid.Column="4">
                <!--Glass Align Detach Image overlay-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.95*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.9*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.55*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{StaticResource AlignStageDetachImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                    <Image.Visibility>
                        <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                            <Binding Path="Devices.Inputs.DetachGlassShtVac1.Value" />
                            <Binding Path="Devices.Inputs.DetachGlassShtVac2.Value" />
                            <Binding Path="Devices.Inputs.DetachGlassShtVac3.Value" />
                        </MultiBinding>
                    </Image.Visibility>
                </Image>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="4"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- Glass Align Detach Left Image overlay-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.77*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{StaticResource AlignStageDetachLeftImage}"
                           Grid.Column="1"
                           Grid.Row="1"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect1.Value" />
