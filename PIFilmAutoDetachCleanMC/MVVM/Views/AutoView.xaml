<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.AutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AutoViewModel}}"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="GroupBox"
               x:Key="TextBlockHeaderGroupBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Background="#00BAF5"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin"
                    Value="1 1 0 1" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
        <Style TargetType="{x:Type ui:InterlockButton}"
               BasedOn="{StaticResource {x:Type ui:InterlockButton}}">
            <Setter Property="Margin"
                    Value="1 1 0 1" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>

        <!-- Signal Ellipse Style -->
        <Style x:Key="SignalEllipseStyle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="20" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Fill"
                    Value="Red" />
            <Setter Property="Stroke"
                    Value="White" />
            <Setter Property="StrokeThickness"
                    Value="2" />
        </Style>

        <cvt:InputOutputStopConverter x:Key="InputOutputStopConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cvt:BooleanOrToVisibilityConverter x:Key="BooleanOrToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" 
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2">
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                                  ItemsSource="{Binding CassetteList.CassetteOut.Cells}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <GroupBox Header="CASSETTE OUT"
                                          Style="{StaticResource TextBlockHeaderGroupBox}">
                                <ItemsPresenter />
                            </GroupBox>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteOut.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <Grid Grid.Row="5"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2">
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                              ItemsSource="{Binding CassetteList.CassetteIn.Cells}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <GroupBox Header="CASSETTE IN"
                                          Style="{StaticResource TextBlockHeaderGroupBox }">
                                <ItemsPresenter />
                            </GroupBox>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteIn.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            
            <!-- Machine Image overlay-->
            <Grid Grid.Row="2" 
                  Grid.ColumnSpan="9"
                  Grid.RowSpan="3">
                <Image Source="{StaticResource AutoViewImage}"
                       Stretch="Fill"/>
            </Grid>
            <Grid Grid.Row="2" 
                  Grid.Column="1"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="1.0*"/>
                    <RowDefinition Height="1.27*"/>
                </Grid.RowDefinitions>
                <!-- InCSTWork Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource InCSTWorkImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstWorkDetect1.Value"/>
                                <Binding Path="Devices.Inputs.InCstWorkDetect2.Value"/>
                                <Binding Path="Devices.Inputs.InCstWorkDetect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Buffer Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource BufferImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.BufferCstDetect1.Value"/>
                                <Binding Path="Devices.Inputs.BufferCstDetect2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- OUTCSTWork Image overlay-->
                <Border Grid.Row="0">
                    <Image Source="{StaticResource OutCSTWorkImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstWorkDetect1.Value"/>
                                <Binding Path="Devices.Inputs.OutCstWorkDetect2.Value"/>
                                <Binding Path="Devices.Inputs.OutCstWorkDetect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Row="2" 
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="1.0*"/>
                    <RowDefinition Height="1.27*"/>
                </Grid.RowDefinitions>
                <!-- InCST Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource InCSTImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstDetect1.Value"/>
                                <Binding Path="Devices.Inputs.InCstDetect2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- OUTCST Image overlay-->
                <Border Grid.Row="0">
                    <Image Source="{StaticResource OutCSTImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstDetect1.Value"/>
                                <Binding Path="Devices.Inputs.OutCstDetect2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Column="2"
                  Grid.Row="2"
                  Grid.RowSpan="3"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.1*"/>
                    <RowDefinition/>
                    <RowDefinition Height ="1.2*"/>
                </Grid.RowDefinitions>
                
                <!-- VinylClean Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource VinylCleanImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.VinylCleanFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- FixtureAlign Image overlay-->
                <Border Grid.Row="2"
                        Grid.Column="1">
                    <Image Source="{StaticResource AlignFixtureImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Detach Image overlay-->
                <Border Grid.Row="1"
                        Grid.Column="1">
                    <Image Source="{StaticResource GlassDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignStageLGlassDettect1.Value"/>
                                <Binding Path="Devices.Inputs.AlignStageLGlassDettect2.Value"/>
                                <Binding Path="Devices.Inputs.AlignStageLGlassDettect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- RemoveFilm Image overlay-->
                <Border Grid.Row="0"
                        Grid.Column="1">
                    <Image Source="{StaticResource RemoveZoneImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.RemoveZoneFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

        </Grid>

        <UniformGrid Rows="9"
                     Grid.Column="1">
            <Button Content="{Binding MachineStatus.MachineRunModeDisplay}"
                    Background="LightBlue"
                    Command="{Binding SelectRunModeCommand}" />
            <Button Content="IO Monitoring"
                    Command="{Binding IOMonitoringNavigate}"
                    Background="LightBlue" />
            <Button Content="Initialize"
                    Background="LightBlue"
                    Command="{Binding InitializeNavigate}" />
            <Button Content="Origin"
                    Background="LightBlue"
                    Command="{Binding OriginCommand}" />
            <Button Content="Production Info"
                    Background="LightGreen" />
            <UniformGrid Columns="2">
                <Button Content="Input Stop"
                        Command="{Binding InputStopCommand}"
                        Background="{Binding IsInputStop, Converter={StaticResource InputOutputStopConverter}}" />
                <Button Content="Output Stop"
                        Command="{Binding OutputStopCommand}"
                        Background="{Binding IsOutputStop, Converter={StaticResource InputOutputStopConverter}}" />
            </UniformGrid>
            <UniformGrid Columns="2">
                <Border BorderBrush="Gray"
                        Margin="2 0 0 0"
                        BorderThickness="1">
                    <TextBlock  Text="T/T"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Background="White" />
                </Border>

                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Margin="2 0 0 0">
                    <TextBlock  Text="{Binding TaktTime}"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Background="White" />
                </Border>

            </UniformGrid>
            <Button Content="Start"
                    Command="{Binding StartCommand}"
                    Background="LightGray" />
            <Button Content="Stop"
                    Command="{Binding StopCommand}"
                    Background="OrangeRed" />
        </UniformGrid>

    </Grid>
</UserControl>
