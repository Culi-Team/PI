<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.AutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             mc:Ignorable="d"
             xmlns:control="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AutoViewModel}}"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="1060"
             d:DesignWidth="1920">
    <UserControl.Resources>
        <Style TargetType="GroupBox"
               x:Key="TextBlockHeaderGroupBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="Black"
                                   VerticalAlignment="Center" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Signal Ellipse Style -->
        <Style x:Key="SignalEllipseStyle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="20" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Fill"
                    Value="Red" />
            <Setter Property="Stroke"
                    Value="White" />
            <Setter Property="StrokeThickness"
                    Value="2" />
        </Style>

        <cvt:InputOutputStopConverter x:Key="InputOutputStopConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cvt:BooleanOrToVisibilityConverter x:Key="BooleanOrToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="10 0 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <Label Content="Cassette Out"
                           Background="Beige"
                           HorizontalContentAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14" />
                    <Button Content="Reset"
                            Margin="5 0 0 0"
                            Command="{Binding ResetCSTOutCommand}" />
                </UniformGrid>
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                              ItemsSource="{Binding CassetteList.CassetteOut.Cells}"
                              Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteOut.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <Grid Grid.Row="5"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="9*" />
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <Label Content="Cassette In"
                           Background="Beige"
                           HorizontalContentAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14" />
                    <Button Content="Reset"
                            Margin="5 0 0 0"
                            Command="{Binding ResetCSTInCommand}" />
                </UniformGrid>
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                              ItemsSource="{Binding CassetteList.CassetteIn.Cells}"
                              Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteIn.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <!-- Machine Image overlay-->
            <Grid Grid.Row="2"
                  Grid.ColumnSpan="9"
                  Grid.RowSpan="3">
                <Image Source="{StaticResource AutoViewImage}"
                       Stretch="Fill" />
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="1"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="1.0*" />
                    <RowDefinition Height="1.27*" />
                </Grid.RowDefinitions>
                <!-- InCSTWork Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource InCSTWorkImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstWorkDetect1.Value" />
                                <Binding Path="Devices.Inputs.InCstWorkDetect2.Value" />
                                <Binding Path="Devices.Inputs.InCstWorkDetect3.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Buffer Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource BufferImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.BufferCstDetect1.Value" />
                                <Binding Path="Devices.Inputs.BufferCstDetect2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- OUTCSTWork Image overlay-->
                <Border Grid.Row="0">
                    <Image Source="{StaticResource OutCSTWorkImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstWorkDetect1.Value" />
                                <Binding Path="Devices.Inputs.OutCstWorkDetect2.Value" />
                                <Binding Path="Devices.Inputs.OutCstWorkDetect3.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="1.0*" />
                    <RowDefinition Height="1.27*" />
                </Grid.RowDefinitions>
                <!-- InCST Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource InCSTImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstDetect1.Value" />
                                <Binding Path="Devices.Inputs.InCstDetect2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- OUTCST Image overlay-->
                <Border Grid.Row="0">
                    <Image Source="{StaticResource OutCSTImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstDetect1.Value" />
                                <Binding Path="Devices.Inputs.OutCstDetect2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Column="2"
                  Grid.Row="2"
                  Grid.RowSpan="3"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.1*" />
                    <RowDefinition />
                    <RowDefinition Height="1.2*" />
                </Grid.RowDefinitions>

                <!-- VinylClean Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource VinylCleanImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.VinylCleanFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- FixtureAlign Image overlay-->
                <Border Grid.Row="2"
                        Grid.Column="1">
                    <Image Source="{StaticResource AlignFixtureImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Detach Image overlay-->
                <Border Grid.Row="1"
                        Grid.Column="1">
                    <Image Source="{StaticResource GlassDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.DetachFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- RemoveFilm Image overlay-->
                <Border Grid.Row="0"
                        Grid.Column="1">
                    <Image Source="{StaticResource RemoveZoneImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.RemoveZoneFixtureDetect.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="4"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- Glass Align Detach Image overlay-->
                <Border>
                    <Image Source="{StaticResource AlignStageDetachLeftImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect1.Value" />
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect2.Value" />
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect3.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Glass Align Detach Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource AlignStageDetachRightImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignStageRGlassDetect1.Value" />
                                <Binding Path="Devices.Inputs.AlignStageRGlassDetect2.Value" />
                                <Binding Path="Devices.Inputs.AlignStageRGlassDetect3.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>
            <Grid Grid.Column="5"
                  Grid.Row="2"
                  Grid.RowSpan="3"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--Wet Clean Left Image overlay-->
                <Border Grid.Column="1">
                    <Image Source="{StaticResource WetCleanImageDetachLeft}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.WetCleanPusherLeftDown.Value" />
                                <Binding Path="Devices.Outputs.WetCleanPusherLeftDown.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--AF Clean Left Image overlay-->
                <Border Grid.Column="3">
                    <Image Source="{StaticResource AFCleanImageDetachLeft}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AfCleanPusherLeftDown.Value" />
                                <Binding Path="Devices.Outputs.AfCleanPusherLeftDown.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--Wet Clean Left Image overlay-->
                <Border Grid.Column="1"
                        Grid.Row="1">
                    <Image Source="{StaticResource WetCleanImageDetachRight}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.WetCleanPusherRightDown.Value" />
                                <Binding Path="Devices.Outputs.WetCleanPusherRightDown.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--AF Clean Left Image overlay-->
                <Border Grid.Column="3"
                        Grid.Row="1">
                    <Image Source="{StaticResource AFCleanImageDetachRight}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AfCleanPusherRightDown.Value" />
                                <Binding Path="Devices.Outputs.AfCleanPusherRightDown.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="6"
                  Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--TransferRotation Detach Left Image overlay-->
                <Border>
                    <Image Source="{StaticResource TransferRotationDetachLeftImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.TrRotateLeftVac1.Value" />
                                <Binding Path="Devices.Inputs.TrRotateLeftVac2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--TransferRotation Detach Right Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource TransferRotationDetachRightImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.TrRotateRightVac1.Value" />
                                <Binding Path="Devices.Inputs.TrRotateRightVac2.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="7"
                  Grid.ColumnSpan="2"
                  Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--Unload Glass Image overlay-->
                <Grid Grid.Column="1"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.27*"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="1.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.15*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="1.65*"/>
                    </Grid.RowDefinitions>
                    <!--Image 1-->
                    <Border Grid.Column="1"
                        Grid.Row="4">
                        <Image Source="{StaticResource UnloadAlignDetachImage_1 }"
                           Stretch="Fill">
                            <Image.Visibility>
                                <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                    <Binding Path="Devices.Inputs.UnloadGlassDetect1.Value" />
                                </MultiBinding>
                            </Image.Visibility>
                        </Image>
                    </Border>
                    <!--Image 2-->
                    <Border Grid.Column="1"
                        Grid.Row="3">
                        <Image Source="{StaticResource UnloadAlignDetachImage_2 }"
                           Stretch="Fill">
                            <Image.Visibility>
                                <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                    <Binding Path="Devices.Inputs.UnloadGlassDetect2.Value" />
                                </MultiBinding>
                            </Image.Visibility>
                        </Image>
                    </Border>
                    <!--Image 3-->
                    <Border Grid.Column="1"
                        Grid.Row="2">
                        <Image Source="{StaticResource UnloadAlignDetachImage_3 }"
                           Stretch="Fill">
                            <Image.Visibility>
                                <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                    <Binding Path="Devices.Inputs.UnloadGlassDetect3.Value" />
                                </MultiBinding>
                            </Image.Visibility>
                        </Image>
                    </Border>
                    <!--Image 4-->
                    <Border Grid.Column="1"
                        Grid.Row="1">
                        <Image Source="{StaticResource UnloadAlignDetachImage_4 }"
                           Stretch="Fill">
                            <Image.Visibility>
                                <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                    <Binding Path="Devices.Inputs.UnloadGlassDetect4.Value" />
                                </MultiBinding>
                            </Image.Visibility>
                        </Image>
                    </Border>
                </Grid>

                <!--Unload Robot Glass Image overlay-->
                <Border Grid.Column="2">
                    <Image Source="{StaticResource UnloadRobotDetachImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.UnloadRobotDetect1.Value" />
                                <Binding Path="Devices.Inputs.UnloadRobotDetect2.Value" />
                                <Binding Path="Devices.Inputs.UnloadRobotDetect3.Value" />
                                <Binding Path="Devices.Inputs.UnloadRobotDetect4.Value" />
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <!--Plasma Status View-->
            <Border Grid.Row="0"
                    Grid.Column="7"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:PlasmaStatusView DataContext="{Binding Plasma}" />
            </Border>

            <!--Clean Status View-->
            <Border Grid.Row="0"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.WetCleanLeftRecipe}" />
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="5"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.AfCleanLeftRecipe}" />
            </Border>

            <Border Grid.Row="5"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.WetCleanRightRecipe}" />
            </Border>
            <Border Grid.Row="5"
                    Grid.Column="5"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.AfCleanRightRecipe}" />
            </Border>

            <Border Grid.Column="7"
                    Grid.Row="5"
                    Margin="6"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <UniformGrid Rows="3">
                    <UniformGrid Rows="2">
                        <Label Content="PROCESS MODE"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="20"
                               Margin="0 0 0 5"
                               FontWeight="Bold"
                               Background="Beige" />
                        <Label Content="{Binding MachineStatus.CurrentProcessMode}"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Typography.Capitals="AllPetiteCaps"
                               Background="AliceBlue" />
                    </UniformGrid>

                    <UniformGrid Rows="2"
                                 Margin="0 5 0 0">
                        <Label Content="SWITCH KEY MODE"
                               Background="Beige"
                               FontSize="20"
                               Margin="0 0 0 5"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontWeight="Bold" />
                        <UniformGrid Columns="2">
                            <Label Content="AUTO"
                                   FontSize="16"
                                   Background="{Binding Devices.Inputs.IsSwitchKeyAutoMode,Converter={StaticResource BoolToBrushConverter}}"
                                   BorderBrush="Gray"
                                   BorderThickness="1"
                                   FontWeight="SemiBold"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" />
                            <Label Content="MANUAL"
                                   FontSize="16"
                                   Background="{Binding Devices.Inputs.IsSwitchKeyManualMode,Converter={StaticResource BoolToBrushConverter}}"
                                   BorderBrush="Gray"
                                   BorderThickness="1"
                                   FontWeight="SemiBold"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" />
                        </UniformGrid>
                    </UniformGrid>

                    <UniformGrid Columns="2"
                                 Margin="0 20 0 10 ">
                        <ui:ImageButton Content="Door Open"
                                        FontSize="20" />
                        <ui:ImageButton Content="Buzzer Off"
                                        FontSize="20" />
                    </UniformGrid>
                </UniformGrid>
            </Border>
        </Grid>

        <Grid Grid.Column="1"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ui:ImageButton Grid.Row="0"
                            Image="/EQX.UI;component/Resources/Images/model_change_Selected.png"
                            Content="{Binding MachineStatus.MachineRunModeDisplay}"
                            Background="LightBlue"
                            FontSize="18"
                            Command="{Binding SelectRunModeCommand}" />

            <ui:ImageButton Grid.Row="1"
                            Image="/EQX.UI;component/Resources/Images/IO_selected.png"
                            Content="IO Monitoring"
                            FontSize="18"
                            Command="{Binding IOMonitoringNavigate}"
                            Background="LightBlue" />

            <ui:ImageButton Grid.Row="2"
                            Image="/EQX.UI;component/Resources/Images/idling_selected.png"
                            Content="Initialize"
                            FontSize="18"
                            Background="LightBlue"
                            Command="{Binding InitializeNavigate}" />

            <ui:ImageButton Grid.Row="3"
                            Image="/EQX.UI;component/Resources/Images/return_origin_selected.png"
                            Content="Origin"
                            FontSize="18"
                            Background="LightBlue"
                            Command="{Binding OriginCommand}" />

            <!-- PRODUCT INFORMATION -->
            <Border Grid.Row="4"
                    Grid.RowSpan="2"
                    Margin="1"
                    Background="MintCream">
                <ContentControl Content="{Binding WorkData}" />
            </Border>

            <UniformGrid Grid.Row="6"
                         Margin="0 10 0 10"
                         Columns="2">
                <Button Content="Input Stop"
                        FontSize="18"
                        Command="{Binding InputStopCommand}"
                        Background="{Binding IsInputStop, Converter={StaticResource InputOutputStopConverter}}" />
                <Button Content="Output Stop"
                        FontSize="18"
                        Command="{Binding OutputStopCommand}"
                        Background="{Binding IsOutputStop, Converter={StaticResource InputOutputStopConverter}}" />
            </UniformGrid>

            <ui:ImageButton Grid.Row="7"
                            Image="/EQX.UI;component/Resources/Images/start_selected.png"
                            Content="Start"
                            FontSize="18"
                            Command="{Binding StartCommand}" />

            <ui:ImageButton Grid.Row="8"
                            Image="/EQX.UI;component/Resources/Images/stop_selected.png"
                            Content="Stop"
                            FontSize="18"
                            Command="{Binding StopCommand}" />
        </Grid>

    </Grid>
</UserControl>
