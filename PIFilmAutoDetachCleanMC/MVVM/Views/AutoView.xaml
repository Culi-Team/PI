<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.AutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AutoViewModel}}"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin"
                    Value="2 2 0 2" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
        <Style TargetType="{x:Type ui:InterlockButton}"
               BasedOn="{StaticResource {x:Type ui:InterlockButton}}">
            <Setter Property="Margin"
                    Value="2 2 0 2" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>

        <!-- Signal Ellipse Style -->
        <Style x:Key="SignalEllipseStyle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="20" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Fill"
                    Value="Red" />
            <Setter Property="Stroke"
                    Value="White" />
            <Setter Property="StrokeThickness"
                    Value="2" />
        </Style>

        <cvt:InputOutputStopConverter x:Key="InputOutputStopConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="1"
                    Margin="0 0 0 0">
                <Canvas>
                    <Image Source="{StaticResource AutoViewImage}"
                           Stretch="UniformToFill"
                           Canvas.Left="200"
                           Canvas.Top="50"/>
                    <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                                  Margin="5 5 5 0"
                                  Canvas.Left="300"
                                  Canvas.Top="420"
                                  Width="250"
                                  Height="280"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  ItemsSource="{Binding CassetteList.CassetteIn.Cells}">
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <GroupBox Header="CASSETTE IN"
                                          Background="Gray">
                                    <ItemsPresenter />
                                </GroupBox>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:TrayCellView />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteIn.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                                  Margin="5 5 5 0"
                                  Canvas.Left="300"
                                  Canvas.Top="-240"
                                  Width="250"
                                  Height="280"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  ItemsSource="{Binding CassetteList.CassetteOut.Cells}">
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <GroupBox Header="CASSETTE OUT"
                                          Background="Gray">
                                    <ItemsPresenter />
                                </GroupBox>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:TrayCellView />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteOut.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </Canvas>
            </Border>
        </Grid>
        <UniformGrid Rows="9"
                     Grid.Column="1">
            <Button Content="{Binding MachineStatus.MachineRunModeDisplay}"
                    Background="LightBlue"
                    Command="{Binding SelectRunModeCommand}" />
            <Button Content="IO Monitoring"
                    Command="{Binding IOMonitoringNavigate}"
                    Background="LightBlue" />
            <Button Content="Initialize"
                    Background="LightBlue"
                    Command="{Binding InitializeNavigate}" />
            <Button Content="Origin"
                    Background="LightBlue"
                    Command="{Binding OriginCommand}" />
            <Button Content="Production Info"
                    Background="LightGreen" />
            <UniformGrid Columns="2">
                <Button Content="Input Stop"
                        Command="{Binding InputStopCommand}"
                        Background="{Binding IsInputStop, Converter={StaticResource InputOutputStopConverter}}" />
                <Button Content="Output Stop"
                        Command="{Binding OutputStopCommand}"
                        Background="{Binding IsOutputStop, Converter={StaticResource InputOutputStopConverter}}" />
            </UniformGrid>
            <UniformGrid Columns="2">
                <Border BorderBrush="Gray"
                        Margin="2 0 0 0"
                        BorderThickness="1">
                    <TextBlock  Text="T/T"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Background="White" />
                </Border>

                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Margin="2 0 0 0">
                    <TextBlock  Text="{Binding TaktTime}"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Background="White" />
                </Border>

            </UniformGrid>
            <Button Content="Start"
                    Command="{Binding StartCommand}"
                    Background="LightGray" />
            <Button Content="Stop"
                    Command="{Binding StopCommand}"
                    Background="OrangeRed" />
        </UniformGrid>

    </Grid>
</UserControl>
