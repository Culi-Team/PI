<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.AutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             mc:Ignorable="d"
             xmlns:control="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AutoViewModel}}"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="1060"
             d:DesignWidth="1920">
    <UserControl.Resources>
        <Style TargetType="GroupBox"
               x:Key="TextBlockHeaderGroupBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin"
                    Value="1 1 0 1" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
        <Style TargetType="{x:Type ui:InterlockButton}"
               BasedOn="{StaticResource {x:Type ui:InterlockButton}}">
            <Setter Property="Margin"
                    Value="1 1 0 1" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>

        <!-- Signal Ellipse Style -->
        <Style x:Key="SignalEllipseStyle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="20" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Fill"
                    Value="Red" />
            <Setter Property="Stroke"
                    Value="White" />
            <Setter Property="StrokeThickness"
                    Value="2" />
        </Style>

        <cvt:InputOutputStopConverter x:Key="InputOutputStopConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cvt:BooleanOrToVisibilityConverter x:Key="BooleanOrToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" 
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2">
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                                  ItemsSource="{Binding CassetteList.CassetteOut.Cells}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <GroupBox Header="CASSETTE OUT"
                                          Style="{StaticResource TextBlockHeaderGroupBox}">
                                <ItemsPresenter />
                            </GroupBox>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteOut.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <Grid Grid.Row="5"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2">
                <ItemsControl IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
                              ItemsSource="{Binding CassetteList.CassetteIn.Cells}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <GroupBox Header="CASSETTE IN"
                                          Style="{StaticResource TextBlockHeaderGroupBox }">
                                <ItemsPresenter />
                            </GroupBox>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:TrayCellView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding DataContext.CassetteList.CassetteIn.Columns, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <!-- Machine Image overlay-->
            <Grid Grid.Row="2" 
                  Grid.ColumnSpan="9"
                  Grid.RowSpan="3">
                <Image Source="{StaticResource AutoViewImage}"
                       Stretch="Fill"/>
            </Grid>

            <Grid Grid.Row="2" 
                  Grid.Column="1"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="1.0*"/>
                    <RowDefinition Height="1.27*"/>
                </Grid.RowDefinitions>
                <!-- InCSTWork Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource InCSTWorkImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstWorkDetect1.Value"/>
                                <Binding Path="Devices.Inputs.InCstWorkDetect2.Value"/>
                                <Binding Path="Devices.Inputs.InCstWorkDetect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Buffer Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource BufferImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.BufferCstDetect1.Value"/>
                                <Binding Path="Devices.Inputs.BufferCstDetect2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- OUTCSTWork Image overlay-->
                <Border Grid.Row="0">
                    <Image Source="{StaticResource OutCSTWorkImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstWorkDetect1.Value"/>
                                <Binding Path="Devices.Inputs.OutCstWorkDetect2.Value"/>
                                <Binding Path="Devices.Inputs.OutCstWorkDetect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Row="2" 
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="1.0*"/>
                    <RowDefinition Height="1.27*"/>
                </Grid.RowDefinitions>
                <!-- InCST Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource InCSTImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.InCstDetect1.Value"/>
                                <Binding Path="Devices.Inputs.InCstDetect2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- OUTCST Image overlay-->
                <Border Grid.Row="0">
                    <Image Source="{StaticResource OutCSTImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.OutCstDetect1.Value"/>
                                <Binding Path="Devices.Inputs.OutCstDetect2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Column="2"
                  Grid.Row="2"
                  Grid.RowSpan="3"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.1*"/>
                    <RowDefinition/>
                    <RowDefinition Height ="1.2*"/>
                </Grid.RowDefinitions>

                <!-- VinylClean Image overlay-->
                <Border Grid.Row="2">
                    <Image Source="{StaticResource VinylCleanImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.VinylCleanFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- FixtureAlign Image overlay-->
                <Border Grid.Row="2"
                        Grid.Column="1">
                    <Image Source="{StaticResource AlignFixtureImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Detach Image overlay-->
                <Border Grid.Row="1"
                        Grid.Column="1">
                    <Image Source="{StaticResource GlassDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.DetachFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- RemoveFilm Image overlay-->
                <Border Grid.Row="0"
                        Grid.Column="1">
                    <Image Source="{StaticResource RemoveZoneImageDetach}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.RemoveZoneFixtureDetect.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="4"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!-- Glass Align Detach Image overlay-->
                <Border>
                    <Image Source="{StaticResource AlignStageDetachLeftImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect1.Value"/>
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect2.Value"/>
                                <Binding Path="Devices.Inputs.AlignStageLGlassDetect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!-- Glass Align Detach Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource AlignStageDetachRightImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AlignStageRGlassDetect1.Value"/>
                                <Binding Path="Devices.Inputs.AlignStageRGlassDetect2.Value"/>
                                <Binding Path="Devices.Inputs.AlignStageRGlassDetect3.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>
            <Grid Grid.Column="5"
                  Grid.Row="2"
                  Grid.RowSpan="3"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--Wet Clean Left Image overlay-->
                <Border Grid.Column="1">
                    <Image Source="{StaticResource WetCleanImageDetachLeft}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.WetCleanPusherLeftDown.Value"/>
                                <Binding Path="Devices.Outputs.WetCleanPusherLeftDown.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--AF Clean Left Image overlay-->
                <Border Grid.Column="3">
                    <Image Source="{StaticResource AFCleanImageDetachLeft}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AfCleanPusherLeftDown.Value"/>
                                <Binding Path="Devices.Outputs.AfCleanPusherLeftDown.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--Wet Clean Left Image overlay-->
                <Border Grid.Column="1" 
                        Grid.Row="1">
                    <Image Source="{StaticResource WetCleanImageDetachRight}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.WetCleanPusherRightDown.Value"/>
                                <Binding Path="Devices.Outputs.WetCleanPusherRightDown.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--AF Clean Left Image overlay-->
                <Border Grid.Column="3" 
                        Grid.Row="1">
                    <Image Source="{StaticResource AFCleanImageDetachRight}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.AfCleanPusherRightDown.Value"/>
                                <Binding Path="Devices.Outputs.AfCleanPusherRightDown.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="6"
                  Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--TransferRotation Detach Left Image overlay-->
                <Border>
                    <Image Source="{StaticResource TransferRotationDetachLeftImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.TrRotateLeftVac1.Value"/>
                                <Binding Path="Devices.Inputs.TrRotateLeftVac2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--TransferRotation Detach Right Image overlay-->
                <Border Grid.Row="1">
                    <Image Source="{StaticResource TransferRotationDetachRightImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.TrRotateRightVac1.Value"/>
                                <Binding Path="Devices.Inputs.TrRotateRightVac2.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="7"
                  Grid.ColumnSpan="2"
                  Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--Unload Glass Image overlay-->
                <Border Grid.Column="1"
                        Grid.Row="1">
                    <Image Source="{StaticResource UnloadAlignDetachImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.UnloadGlassDetect1.Value"/>
                                <Binding Path="Devices.Inputs.UnloadGlassDetect2.Value"/>
                                <Binding Path="Devices.Inputs.UnloadGlassDetect3.Value"/>
                                <Binding Path="Devices.Inputs.UnloadGlassDetect4.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
                <!--Unload Robot Glass Image overlay-->
                <Border Grid.Column="2">
                    <Image Source="{StaticResource UnloadRobotDetachImage}"
                           Stretch="Fill">
                        <Image.Visibility>
                            <MultiBinding Converter="{StaticResource BooleanOrToVisibilityConverter}">
                                <Binding Path="Devices.Inputs.UnloadRobotDetect1.Value"/>
                                <Binding Path="Devices.Inputs.UnloadRobotDetect2.Value"/>
                                <Binding Path="Devices.Inputs.UnloadRobotDetect3.Value"/>
                                <Binding Path="Devices.Inputs.UnloadRobotDetect4.Value"/>
                            </MultiBinding>
                        </Image.Visibility>
                    </Image>
                </Border>
            </Grid>

            <!--Plasma Status View-->
            <Border Grid.Row="0"
                    Grid.Column="7"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:PlasmaStatusView DataContext="{Binding Plasma}" />
            </Border>

            <!--Clean Status View-->
            <Border Grid.Row="0"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.WetCleanLeftRecipe}" />
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="5"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.AfCleanLeftRecipe}" />
            </Border>

            <Border Grid.Row="5"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.WetCleanRightRecipe}" />
            </Border>
            <Border Grid.Row="5"
                    Grid.Column="5"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5">
                <control:CleanUnitStatusView DataContext="{Binding RecipeSelector.CurrentRecipe.AfCleanRightRecipe}" />
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" 
                    Content="{Binding MachineStatus.MachineRunModeDisplay}"
                    Background="LightBlue"
                    Command="{Binding SelectRunModeCommand}" />
            
            <Button Grid.Row="1" 
                    Content="IO Monitoring"
                    Command="{Binding IOMonitoringNavigate}"
                    Background="LightBlue" />
            
            <Button Grid.Row="2" Content="Initialize"
                    Background="LightBlue"
                    Command="{Binding InitializeNavigate}" />
            
            <Button Grid.Row="3" 
                    Content="Origin"
                    Background="LightBlue"
                    Command="{Binding OriginCommand}" />
            
             <!-- PRODUCT INFORMATION -->
            <Border Grid.Row="4" 
                    Grid.RowSpan="2"
                    Margin="1"
                    Background="MintCream">
                <ContentControl Content="{Binding WorkData}" />
            </Border>

            <UniformGrid Grid.Row="6" 
                         Columns="2">
                <Button Content="Input Stop"
                        Command="{Binding InputStopCommand}"
                        Background="{Binding IsInputStop, Converter={StaticResource InputOutputStopConverter}}" />
                <Button Content="Output Stop"
                        Command="{Binding OutputStopCommand}"
                        Background="{Binding IsOutputStop, Converter={StaticResource InputOutputStopConverter}}" />
            </UniformGrid>

            <Button Grid.Row="7" 
                    Content="Start"
                    Command="{Binding StartCommand}"
                    Background="LightGray" />
            
            <Button Grid.Row="8" 
                    Content="Stop"
                    Command="{Binding StopCommand}"
                    Background="OrangeRed" />
        </Grid>

    </Grid>
</UserControl>
