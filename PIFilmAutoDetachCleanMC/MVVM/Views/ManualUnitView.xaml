<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.ManualUnitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:motion="clr-namespace:EQX.Motion;assembly=EQX.Motion"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             xmlns:converter="clr-namespace:EQX.UI.Converters;assembly=EQX.UI"
             xmlns:reg="clr-namespace:PIFilmAutoDetachCleanMC.Defines.Devices.Regulator"
             xmlns:recipe="clr-namespace:PIFilmAutoDetachCleanMC.Recipe"
             xmlns:speedController="clr-namespace:EQX.Core.Device.SpeedController;assembly=EQX.Core"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Converters -->
        <converter:CylinderTypeToButtonNameConverter x:Key="CylinderTypeToButtonNameConverter" />
        <converter:BooleanToOnOffBrushConverter x:Key="BooleanToOnOffBrushConverter" />
        <cvt:RollerButtonConverter x:Key="RollerButtonConverter"/>
        <cvt:CylinderButtonBrushConverter x:Key="CylinderButtonBrushConverter" />
        <cvt:VacuumListConverter x:Key="VacuumListConverter" />
        <cvt:PositionComparisonConverter x:Key="PositionComparisonConverter" />

        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#C3C9Cf"/>

        <!-- Common Styles -->
        <!-- Control Module Style - Common for Motion and Cylinder -->
        <!-- Common Styles -->
        <!-- MotionStyle-->
        <Style x:Key="MontionControlStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="Height" Value="300"/>
        </Style>
        <!-- CylinderStyle-->
        <Style x:Key="CylinderControlStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="Height" Value="85"/>
        </Style>
        <!-- DataTemplates -->
        <DataTemplate DataType="{x:Type motion:MotionBase}">
            <Border Style="{StaticResource MontionControlStyle}">
                <ui:MotionView Motion="{Binding}"/>
            </Border>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:CylinderBase}">
            <ui:CylinderView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:DInput}">
            <ui:DInputView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:DOutput}">
            <ui:DOutputView/>
        </DataTemplate>

        <!-- Cylinder Button Style - Modern Style -->
        <Style x:Key="CylinderButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF6B6B6B"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF4A4A4A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            
                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Speed Controller Template -->
        <DataTemplate x:Key="SpeedControllerTemplate" DataType="{x:Type speedController:ISpeedController}">
            <Border Style="{StaticResource MontionControlStyle}">
                <StackPanel>
                    <!-- Speed Controller Name -->
                    <TextBlock Text="{Binding Name}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Foreground="Black"
                               Margin="0,0,0,5"/>
                    
                    <!-- Speed Controller Status - Circular -->
                    <Ellipse Width="20"
                             Height="20"
                             Fill="{Binding IsConnected, Converter={StaticResource BooleanToOnOffBrushConverter}}"
                             Stroke="{StaticResource PrimaryBorderBrush}"
                             StrokeThickness="1"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,5"/>
                    
                    <!-- Speed Controller Buttons -->
                    <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Center">
                        <Button Content="Start" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="{Binding IsConnected, Converter={StaticResource RollerButtonConverter}, ConverterParameter=Start}" 
                                BorderBrush="{Binding IsConnected, Converter={StaticResource RollerButtonConverter}, ConverterParameter=Start}"
                                Foreground="White"
                                Click="SpeedControllerStart_Click"/>
                        <Button Content="Stop" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="{Binding IsConnected, Converter={StaticResource RollerButtonConverter}, ConverterParameter=Stop}" 
                                BorderBrush="{Binding IsConnected, Converter={StaticResource RollerButtonConverter}, ConverterParameter=Stop}"
                                Foreground="White"
                                Click="SpeedControllerStop_Click"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Common Styles -->
        <Style x:Key="GroupBoxBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ScrollableGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="1 0 1 0"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <Style x:Key="HorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5" MinWidth="200" MaxWidth="300" MinHeight="200"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputOutputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5 0 5 10"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ui:DInputView DataContext="{Binding}" Margin="5 0 5 10" Width="300"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ui:DOutputView DataContext="{Binding}" Margin="5 0 5 10" Width="300"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Cylinder Template with InOut Style Buttons -->
        <DataTemplate x:Key="CylinderInOutTemplate" DataType="{x:Type inout:CylinderBase}">
            <Border Style="{StaticResource CylinderControlStyle}">
                <StackPanel>
                    <!-- Cylinder Name -->
                    <TextBlock Text="{Binding Name}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Foreground="Black"/>
                    <!-- Modern Cylinder Buttons -->
                    <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Center">
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=true}" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}" 
                                BorderBrush="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.CylinderForwardCommand}"
                                CommandParameter="{Binding}"/>
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=false}" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}" 
                                BorderBrush="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.CylinderBackwardCommand}"
                                CommandParameter="{Binding}"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="350"/>
        </Grid.RowDefinitions>
        
        <!-- Image Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="1">
            <GroupBox Header="Image" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <Image Source="{Binding ManualImage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Stretch="Uniform"/>
            </GroupBox>
        </Border>

        <!-- Cylinder Section -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Style="{StaticResource GroupBoxBorderStyle}">
            <GroupBox Header="Cylinder" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Cylinders, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                                   ItemTemplate="{StaticResource CylinderInOutTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" VerticalAlignment="Top" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Border>
        
        <!-- Moving View Section -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Style="{StaticResource GroupBoxBorderStyle}" >
            <GroupBox Header="Motion" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Speed Controller Controls (for Conveyors) - Hiển thị trước -->
                        <ItemsControl x:Name="SpeedControllerItemsControl" 
                                        ItemsSource="{Binding SpeedControllers, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                        ItemTemplate="{StaticResource SpeedControllerTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4" VerticalAlignment="Top" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        
                        <!-- Motion Controls - Hiển thị sau -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="400"
                                      Margin="0 10 0 0">
                            <ItemsControl x:Name="MotionItemsControl" 
                                            ItemsSource="{Binding Motions, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="4" VerticalAlignment="Top" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- In Out Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="0">
            <GroupBox Header="In Out" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <StackPanel>
                            <TextBlock Text="Input" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Inputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputItemsControlStyle}"/>
                        </StackPanel>
                        <!-- Output Section -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Output" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Outputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource OutputItemsControlStyle}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>
