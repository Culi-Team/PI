<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.ManualUnitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:motion="clr-namespace:EQX.Motion;assembly=EQX.Motion"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             xmlns:converter="clr-namespace:EQX.UI.Converters;assembly=EQX.UI"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Converters -->
        <converter:CylinderTypeToButtonNameConverter x:Key="CylinderTypeToButtonNameConverter" />
        
        <!-- Common Styles -->
        <!-- Control Module Style - Common for Motion and Cylinder -->
        <Style x:Key="ControlModuleStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="Height" Value="140"/>
        </Style>
        
        <!-- DataTemplates -->
        <DataTemplate DataType="{x:Type motion:MotionBase}">
            <Border Style="{StaticResource ControlModuleStyle}">
                <ui:MovingView Motion="{Binding}"/>
            </Border>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:CylinderBase}">
            <ui:CylinderView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:DInput}">
            <ui:DInputView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:DOutput}">
            <ui:DOutputView/>
        </DataTemplate>

        <!-- Common Styles -->
        <Style x:Key="GroupBoxBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ScrollableGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="1 0 1 0"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <Style x:Key="HorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5" MinWidth="200" MaxWidth="300" MinHeight="200"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputOutputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5 0 5 10"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cylinder Button Style - Modern Style -->
        <Style x:Key="CylinderButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF6B6B6B"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF4A4A4A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            
                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF4CAF50"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            
                            <!-- Focus State -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2196F3"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Cylinder Template with InOut Style Buttons -->
        <DataTemplate x:Key="CylinderInOutTemplate" DataType="{x:Type inout:CylinderBase}">
            <Border Style="{StaticResource ControlModuleStyle}">
                <StackPanel>
                    <!-- Cylinder Name -->
                    <TextBlock Text="{Binding Name}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,5"/>
                    <!-- Modern Cylinder Buttons -->
                    <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Center">
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=true}" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="LightGray" 
                                BorderBrush="LightGray"
                                Foreground="White"
                                Click="CylinderForward_Click"/>
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=false}" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="LightGray" 
                                BorderBrush="LightGray"
                                Foreground="White"
                                Click="CylinderBackward_Click"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- Image Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="0">
            <GroupBox Header="Image" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <TextBlock Text="Image" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </GroupBox>
        </Border>
        <!-- Regulators Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="1">
            <GroupBox Header="Regulators" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <TextBlock Text="Regulators" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </GroupBox>
        </Border>
        <!-- Cylinder Section -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Style="{StaticResource GroupBoxBorderStyle}" Margin="0,10,0,0">
            <GroupBox Header="Cylinder" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Cylinders, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                                   ItemTemplate="{StaticResource CylinderInOutTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Border>
        
        <!-- Moving View Section -->

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Style="{StaticResource GroupBoxBorderStyle}" Margin="0,10,0,0">
            <GroupBox Header="Motion" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Margin="0 5 0 0">
                    <ItemsControl x:Name="MotionItemsControl" 
                                    ItemsSource="{Binding Motions, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- In Out Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3">
            <GroupBox Header="In Out" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <StackPanel>
                            <TextBlock Text="Input" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Inputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                        <!-- Output Section -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Output" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Outputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>
