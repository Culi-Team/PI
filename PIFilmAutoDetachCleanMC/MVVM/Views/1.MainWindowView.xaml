<Window x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
        xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Width="1920"
        Height="1080"
        ShowInTaskbar="True"
        Icon="/EQX.UI;component/Resources/Images/TopIcon.ico"
        AllowsTransparency="True"
        WindowState="Maximized"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="MainWindowView" >
    <DockPanel>
        <ContentControl Content="{Binding HeaderVM}"
                        DockPanel.Dock="Top"
                        Height="Auto"/>
        <ContentControl Content="{Binding FooterVM}"
                        DockPanel.Dock="Bottom"/>

        <ContentControl Content="{Binding CurrentFrameVM}"/>
    </DockPanel>
</Window>
