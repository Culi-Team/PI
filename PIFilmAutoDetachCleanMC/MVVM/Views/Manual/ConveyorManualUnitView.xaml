<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.Manual.ConveyorManualUnitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views.Manual"
             mc:Ignorable="d"
             xmlns:views="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             x:Name="root"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels.Manual"
             d:DataContext="{d:DesignInstance Type={x:Type vm:ConveyorManualUnitViewModel}}"
             DataContextChanged="root_DataContextChanged"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <GroupBox Header="Input"
                                  Grid.Column="0"
                                  Style="{StaticResource TextBlockHeaderGroupBox}">
                            <ItemsControl ItemsSource="{Binding Inputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DInputView Width="300"
                                                       DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                        <!-- Output Section -->
                        <GroupBox Header="Output"
                                  Style="{StaticResource TextBlockHeaderGroupBox}"
                                  Grid.Column="1">
                            <ItemsControl ItemsSource="{Binding Outputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DOutputView Width="300"
                                                        DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Image Grid.Column="1"
                   Source="{Binding Image}">

            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Cylinder"
                      Grid.Column="0"
                      Style="{StaticResource TextBlockHeaderGroupBox}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Cylinders}"
                                  ItemTemplate="{StaticResource CylinderControlDataTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4"
                                             VerticalAlignment="Top" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Header="Conveyor"
                      Grid.Column="1"
                      Style="{StaticResource TextBlockHeaderGroupBox}">
                <UniformGrid Rows="4">
                    <UniformGrid Columns="2">
                        <Label Content="Speed (rpm)"
                               VerticalContentAlignment="Center"
                               BorderThickness="1"
                               FontSize="12"
                               FontWeight="SemiBold"
                               BorderBrush="LightGray"
                               Margin="0 2 2 2" />
                        <Label Margin="0 2 2 2"
                               BorderBrush="LightGray"
                               Cursor="Hand"
                               BorderThickness="0.5"
                               Content="{Binding ConveyorSpeed,Mode=TwoWay,Converter={StaticResource DoubleToIntConveter}}"
                               MouseLeftButtonDown="Label_MouseLeftButtonDown"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="14" />
                    </UniformGrid>
                    <UniformGrid Columns="2">
                        <Label Content="Acceleration (rpm/s)"
                               VerticalContentAlignment="Center"
                               BorderThickness="1"
                               FontSize="12"
                               FontWeight="SemiBold"
                               BorderBrush="LightGray"
                               Margin="0 2 2 2" />
                        <Label Margin="0 2 2 2"
                               BorderBrush="LightGray"
                               Cursor="Hand"
                               BorderThickness="0.5"
                               Content="{Binding ConveyorAcc,Mode=TwoWay,Converter={StaticResource DoubleToIntConveter}}"
                               MouseLeftButtonDown="Label_MouseLeftButtonDown"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="14" />
                    </UniformGrid>
                    <UniformGrid Columns="2">
                        <Label Content="Deceleration (rpm/s)"
                               VerticalContentAlignment="Center"
                               BorderThickness="1"
                               FontSize="12"
                               FontWeight="SemiBold"
                               BorderBrush="LightGray"
                               Margin="0 2 2 2" />
                        <Label Margin="0 2 2 2"
                               BorderBrush="LightGray"
                               Cursor="Hand"
                               BorderThickness="0.5"
                               Content="{Binding ConveyorDec,Mode=TwoWay,Converter={StaticResource DoubleToIntConveter}}"
                               MouseLeftButtonDown="Label_MouseLeftButtonDown"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="14" />
                    </UniformGrid>
                    <UniformGrid Columns="2"
                                 VerticalAlignment="Center">
                        <Button Content="Run"
                                Command="{Binding ConveyorRunCommand}"
                                Margin="0 0 5 0" />
                        <Button Content="Stop"
                                Command="{Binding ConveyorStopCommand}"
                                Margin="5 0 0 0" />
                    </UniformGrid>
                </UniformGrid>
            </GroupBox>

            <GroupBox Grid.Row="1"
                      Header="Motions"
                      Style="{StaticResource TextBlockHeaderGroupBox}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0 10 0 0">
                    <ItemsControl x:Name="MotionItemsControl"
                                  ItemsSource="{Binding Motions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4"
                                             VerticalAlignment="Top" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:MotionView DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Grid.Column="1"
                      Grid.Row="1"
                      Header="SemiAuto"
                      Style="{StaticResource TextBlockHeaderGroupBox}">
                <ItemsControl ItemsSource="{Binding SemiAutoSequences}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding .,Converter={StaticResource EnumDescriptionConverter}}"
                                    FontSize="14"
                                    Command="{Binding DataContext.SemiAutoCommand, RelativeSource={RelativeSource AncestorType={x:Type views:ManualView}}}"
                                    CommandParameter="{Binding .}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="1"
                                         VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
