<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.IOMonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             mc:Ignorable="d" 
             xmlns:ui ="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <cvt:InputOutputListConverter x:Key="InputOutputListConverter" />
    </UserControl.Resources>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Input">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <Button Content="←"
                            Command="{Binding InputDeviceIndexDecrease}" />
                    <TextBlock Text="{Binding SelectedInputBoardNumber, StringFormat='{}Input Board #{0}'}"
                               Grid.Column="1"
                               TextAlignment="Center"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center" />
                    <Button Content="→"
                            Command="{Binding InputDeviceIndexIncrease}"
                            Grid.Column="2" />
                </Grid>

                <ItemsControl>
                    <ItemsControl.ItemsSource>
                        <MultiBinding Converter="{StaticResource InputOutputListConverter}">
                            <Binding Path="DataContext.InputList.All"
                                     RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                            <Binding Path="DataContext.SelectedInputDeviceIndex"
                                     RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                        </MultiBinding>
                    </ItemsControl.ItemsSource>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:DInputView DataContext="{Binding .}"
                                           Width="350" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Output"
                  Grid.Column="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <Button Content="←"
                            Command="{Binding OutputDeviceIndexDecrease}" />
                    <TextBlock Text="{Binding SelectedOutputBoardNumber, StringFormat='{}Output Board #{0}'}"
                               Grid.Column="1"
                               TextAlignment="Center"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center" />
                    <Button Content="→"
                            Command="{Binding OutputDeviceIndexIncrease}"
                            Grid.Column="2" />
                </Grid>

                <ItemsControl>
                    <ItemsControl.ItemsSource>
                        <MultiBinding Converter="{StaticResource InputOutputListConverter}">
                            <Binding Path="DataContext.OutputList.All"
                                     RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                            <Binding Path="DataContext.SelectedOutputDeviceIndex"
                                     RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                        </MultiBinding>
                    </ItemsControl.ItemsSource>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:DOutputView DataContext="{Binding .}" 
                                            Width="350"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
