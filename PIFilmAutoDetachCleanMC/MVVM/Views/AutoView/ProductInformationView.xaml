<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.ProductInformationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             mc:Ignorable="d"
             d:DesignHeight="200"
             xmlns:productDatas="clr-namespace:PIFilmAutoDetachCleanMC.Defines.ProductDatas"
             d:DataContext="{d:DesignInstance Type={x:Type productDatas:CWorkData}}"
             d:DesignWidth="400"
             FontSize="16">
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="BorderBrush"
                    Value="LightGray" />

            <Setter Property="BorderThickness"
                    Value="1" />

            <Setter Property="FontWeight"
                    Value="SemiBold" />

            <Setter Property="VerticalContentAlignment"
                    Value="Center" />

            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment"
                    Value="Center" />

            <Setter Property="HorizontalAlignment"
                    Value="Center" />

            <Setter Property="FontWeight"
                    Value="SemiBold" />
        </Style>

        <Style TargetType="{x:Type Border}">
            <Setter Property="BorderBrush"
                    Value="LightGray" />

            <Setter Property="BorderThickness"
                    Value="1" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="6"
               Background="#FF1C505E"
               Foreground="White"
               FontWeight="Bold"
               FontSize="14"
               Content="{DynamicResource str_ProductInformation}"/>
        <Label Grid.Row="1"
               Grid.RowSpan="2"
               Content="{DynamicResource str_Total}"
               Background="#b0c4de"
               FontSize="18" />
        <Border Grid.Column="1"
                Grid.Row="1"
                Grid.RowSpan="2">
            <TextBlock Text="{Binding CountData.Total}"/>
        </Border>

        <Label Grid.Column="2"
               Grid.Row="1"
               Background="#c0c0c0"
               FontSize="14"
               Content="Left"
               Foreground="Blue"
               FontWeight="Bold" />
        <Border Grid.Column="3"
                Grid.Row="1">
            <TextBlock Text="{Binding CountData.Left}" />
        </Border>
        <Label Grid.Column="2"
               Grid.Row="2"
               Background="#c0c0c0"
               FontSize="14"
               Content="Right"
               Foreground="DarkBlue"
               FontWeight="Bold" />
        <Border Grid.Column="3"
                Grid.Row="2">
            <TextBlock Text="{Binding CountData.Right}" />
        </Border>
        <Border Grid.RowSpan="2"
                Grid.Row="3"
                Background="#b0c4de">
            <TextBlock Text="{DynamicResource str_CycleCurrent}"
                           TextWrapping="Wrap"
                           TextAlignment="Center" />
        </Border>
        <Border Grid.Column="1"
                Grid.Row="3"
                Grid.RowSpan="2" >
            <TextBlock Text="{Binding TaktTime.CycleCurrent}"/>
        </Border>
        <Label Background="#c0c0c0"
               FontSize="16"
               Grid.Column="2"
               Grid.Row="3"
               Foreground="Green"
               Content="Ave"/>
        <Border Grid.Row="3"
                Grid.Column="3" >
            <TextBlock Text="{Binding TaktTime.Average, StringFormat=N2}"/>
        </Border>
        
        <Label Background="#c0c0c0"
                   FontSize="16"
                   Grid.Column="2"
                   Grid.Row="4"
                   Foreground="Red"
                   Content="Max" />
        <Border Grid.Column="3"
                Grid.Row="4" >
            <TextBlock Text="{Binding TaktTime.Maximum, StringFormat=N2}"/>
        </Border>
        <Border Grid.Row="5"
                Grid.ColumnSpan="4">
            <Button Content="{DynamicResource str_Reset}"
                    Click="Button_Reset_Click"/>
        </Border>
    </Grid>
</UserControl>