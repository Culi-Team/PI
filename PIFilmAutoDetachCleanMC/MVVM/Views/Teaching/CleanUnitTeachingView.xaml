<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.Teaching.CleanUnitTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views.Teaching"
             mc:Ignorable="d"
             x:Name="root"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             Loaded="UserControl_Loaded"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             d:DataContext="{d:DesignInstance Type={x:Type teachingVm:CleanUnitTeachingViewModel}}"
             xmlns:teachingVm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels.Teaching"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="CylinderInOutTemplate"
                      DataType="{x:Type inout:CylinderBase}">
            <Border BorderBrush="Gray"
                    BorderThickness="0.5"
                    Margin="5 0 5 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="{Binding Name}"
                           FontWeight="Bold"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="Black"
                           Margin="0,0,0,5" />
                    <UniformGrid Rows="1"
                                 Columns="2"
                                 Grid.Row="1"
                                 HorizontalAlignment="Center">
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=true}"
                                Background="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                BorderBrush="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Command="{Binding DataContext.CylinderForwardCommand,ElementName=root}"
                                Margin="2 0 2 0"
                                FontSize="14"
                                Height="35"
                                Width="100"
                                CommandParameter="{Binding}" />
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=false}"
                                Background="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                BorderBrush="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Command="{Binding DataContext.CylinderBackwardCommand,ElementName=root}"
                                Margin="2 0 2 0"
                                FontSize="14"
                                CommandParameter="{Binding}" />
                    </UniformGrid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0"
                          Grid.ColumnSpan="2">
                <StackPanel x:Name="PositionTeaching_StackPanel">
                </StackPanel>
            </ScrollViewer>
            <Image Grid.Column="2"
                   Source="{Binding Image}">

            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="1.1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Column="0">
                <UniformGrid Rows="2">
                    <GroupBox Header="Cylinder"
                              Style="{x:Null}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Cylinders}"
                                          ItemTemplate="{StaticResource CylinderControlDataTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"
                                                     VerticalAlignment="Top" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <GroupBox Header="Regulator"
                              Style="{x:Null}">
                        
                    </GroupBox>
                </UniformGrid>
            </Border>

            <Border Grid.Column="1">
                <GroupBox Header="Torque"
                          Style="{x:Null}">
                    <UniformGrid Columns="2">
                        <GroupBox Header="Winder"
                                  Margin="0 0 2 0">
                            
                        </GroupBox>
                        <GroupBox Header="UnWinder"
                                  Margin="2 0 0 0">
                            
                        </GroupBox>
                    </UniformGrid>
                </GroupBox>
            </Border>

            <Border Grid.Column="2"
                    Grid.RowSpan="2">
                <GroupBox Header="In Out">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Margin="0 5 0 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <!-- Input Section -->
                            <StackPanel>
                                <TextBlock Text="Input"
                                           HorizontalAlignment="Center"
                                           FontSize="20"
                                           FontWeight="Bold" />
                                <ItemsControl ItemsSource="{Binding Inputs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ui:DInputView Width="300"
                                                           FontSize="11"
                                                           DataContext="{Binding }" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <!-- Output Section -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Output"
                                           HorizontalAlignment="Center"
                                           FontSize="20"
                                           FontWeight="Bold" />
                                <ItemsControl ItemsSource="{Binding Outputs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ui:DOutputView Width="300"
                                                            FontSize="11"
                                                            DataContext="{Binding }" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </GroupBox>

            </Border>

            <Border Grid.Row="1"
                    Grid.ColumnSpan="2">
                <GroupBox Header="Motions"
                          Style="{x:Null}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Motions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:MovingView DataContext="{Binding }" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>
