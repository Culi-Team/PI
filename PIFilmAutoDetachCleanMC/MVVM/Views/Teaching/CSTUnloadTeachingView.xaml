<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.Teaching.CSTUnloadTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views.Teaching"
             mc:Ignorable="d"
             x:Name="root"
             DataContextChanged="root_DataContextChanged"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             Loaded="UserControl_Loaded"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             d:DataContext="{d:DesignInstance Type={x:Type teachingVm:UnitTeachingViewModel}}"
             xmlns:teachingVm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels.Teaching"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0"
                          Grid.ColumnSpan="2">
                <StackPanel x:Name="PositionTeaching_StackPanel">
                </StackPanel>
            </ScrollViewer>
            <Image Grid.Column="2"
                   Source="{Binding Image}">

            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Column="0"
                    Grid.ColumnSpan="2">
                <GroupBox Header="Cylinder"
                          Style="{StaticResource TextBlockHeaderGroupBox}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Cylinders}"
                                      ItemTemplate="{StaticResource CylinderControlDataTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"
                                                 VerticalAlignment="Top" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Border>

            <Border Grid.Column="2"
                    Grid.RowSpan="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <GroupBox Header="Input"
                                  Grid.Column="0"
                                  Style="{StaticResource TextBlockHeaderGroupBox}">
                            <ItemsControl ItemsSource="{Binding Inputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DInputView Width="300"
                                                       DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                        <!-- Output Section -->
                        <GroupBox Header="Output"
                                  Style="{StaticResource TextBlockHeaderGroupBox}"
                                  Grid.Column="1">
                            <ItemsControl ItemsSource="{Binding Outputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DOutputView Width="300"
                                                        DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1"
                    Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1.2*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Motions"
                              Style="{StaticResource TextBlockHeaderGroupBox}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Motions}"
                                          x:Name="motionsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:MovingView x:Name="motion"
                                                       DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    <GroupBox Header="Laser"
                              Style="{StaticResource TextBlockHeaderGroupBox}"
                              Grid.Column="1">
                        <UniformGrid Rows="2"
                                     Margin="0 0 0 5">
                            <UniformGrid>
                                <Label Content="1st Fixture Distance"
                                       VerticalContentAlignment="Center"
                                       FontSize="14" />
                                <TextBox Text="{Binding Recipe.FirstFixtureDistance,StringFormat='{}{0:0.###} mm',Mode=OneWay}"
                                         VerticalContentAlignment="Center"
                                         Cursor="Hand"
                                         IsReadOnly="True"
                                         BorderBrush="LightGray"
                                         BorderThickness="0.5"
                                         HorizontalContentAlignment="Center" />
                            </UniformGrid>
                            <UniformGrid>
                                <Button Content="Get"
                                        FontSize="14"
                                        Command="{Binding GetCurrentDistanceCommand}" />
                                <Button Content="Save"
                                        FontSize="14"
                                        Command="{Binding SaveCommand}" />
                            </UniformGrid>
                        </UniformGrid>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>
