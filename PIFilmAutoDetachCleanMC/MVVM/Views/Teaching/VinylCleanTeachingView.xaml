<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.Teaching.VinylCleanTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views.Teaching"
             mc:Ignorable="d"
             x:Name="root"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             Loaded="UserControl_Loaded"
             DataContextChanged="root_DataContextChanged"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             d:DataContext="{d:DesignInstance Type={x:Type teachingVm:VinylCleanTeachingViewModel}}"
             xmlns:teachingVm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels.Teaching"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="CylinderInOutTemplate"
                      DataType="{x:Type inout:CylinderBase}">
            <Border BorderBrush="Gray"
                    BorderThickness="0.5"
                    Margin="5 0 5 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="{Binding Name}"
                           FontWeight="Bold"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="Black"
                           Margin="0,0,0,5" />
                    <UniformGrid Rows="1"
                                 Columns="2"
                                 Grid.Row="1"
                                 HorizontalAlignment="Center">
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=true}"
                                Background="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                BorderBrush="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Command="{Binding DataContext.CylinderForwardCommand,ElementName=root}"
                                Margin="2 0 2 0"
                                FontSize="14"
                                Height="35"
                                Width="100"
                                CommandParameter="{Binding}" />
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=false}"
                                Background="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                BorderBrush="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Command="{Binding DataContext.CylinderBackwardCommand,ElementName=root}"
                                Margin="2 0 2 0"
                                FontSize="14"
                                CommandParameter="{Binding}" />
                    </UniformGrid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0"
                          Grid.ColumnSpan="2">
                <StackPanel x:Name="PositionTeaching_StackPanel">
                </StackPanel>
            </ScrollViewer>
            <Image Grid.Column="2"
                   Source="{Binding Image}">

            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>

            <!--Cylinder and Pressure-->
            <Border Grid.Column="0"
                    Grid.ColumnSpan="2">
                <GroupBox Header="Cylinder"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Style="{StaticResource TextBlockHeaderGroupBox}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Cylinders}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="6"
                                                 VerticalAlignment="Top" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl
                                                Content="{Binding .}"
                                                Margin="3"
                                                Height="150"
                                                Width="170"/>   
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Border>
            
            <!--Inout-->
            <Border Grid.Column="2"
                    Grid.RowSpan="3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <GroupBox Header="Input"
                                  Grid.Column="0"
                                  Style="{StaticResource TextBlockHeaderGroupBox}">
                            <ItemsControl ItemsSource="{Binding Inputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DInputView Width="300"
                                                       DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                        <!-- Output Section -->
                        <GroupBox Header="Output"
                                  Grid.Column="1"
                                  Style="{StaticResource TextBlockHeaderGroupBox}">
                            <ItemsControl ItemsSource="{Binding Outputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DOutputView Width="300"
                                                        DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Grid   Grid.Row="1"
                    Grid.ColumnSpan="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1.2*" />
                </Grid.ColumnDefinitions>
                
                <!--Motion-->
                <Border>
                    <GroupBox Header="Motions"
                          Style="{StaticResource TextBlockHeaderGroupBox}">
                        <ScrollViewer>
                            <ItemsControl x:Name="MotionItemsControl"
                                      ItemsSource="{Binding Motions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid VerticalAlignment="Top"
                                                 HorizontalAlignment="Left"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:MotionView DataContext="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Border>

                <!--Torque-->
                <Border Grid.Column="1">
                    <UniformGrid Columns="1">
                        <GroupBox Header="UnWinder Torque"
                                  Style="{StaticResource TextBlockHeaderGroupBox}"
                                  Margin="2 0 0 0"> 
                            <UniformGrid Rows="6">
                                <UniformGrid Columns="2">
                                    <Label Content="Torque (%)"
                                           VerticalContentAlignment="Center"
                                           BorderThickness="1"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           BorderBrush="LightGray"
                                           Margin="0 2 2 2" />
                                    <Label Margin="0 2 2 2"
                                           BorderBrush="LightGray"
                                           BorderThickness="0.5"
                                           Cursor="Hand"
                                           MouseLeftButtonDown="Label_MouseLeftButtonDown"
                                           Content="{Binding Recipe.UnWinderTorque,Mode=TwoWay,Converter={StaticResource DoubleToIntConveter}}"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           FontSize="14" /> 
                                </UniformGrid>
                                <UniformGrid Columns="2">
                                    <Button Content="Set"
                                            FontSize="14"
                                            Command="{Binding UnWinderSetTorqueCommand}"
                                            Margin="0 2 2 2" />
                                    <Button Content="Save"
                                            FontSize="14"
                                            Command="{Binding SaveCommand}"
                                            Margin="0 2 2 2" />
                                </UniformGrid>
                                <UniformGrid Columns="2">
                                    <Button Content="Run"
                                            FontSize="14"
                                            Command="{Binding UnWinderRunCommand}"
                                            Margin="0 2 2 2" />
                                    <Button Content="Stop"
                                            FontSize="14"
                                            Command="{Binding UnWinderStopCommand}"
                                            Margin="0 2 2 2" />
                                </UniformGrid>
                            </UniformGrid>
                        </GroupBox>
                    </UniformGrid>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
