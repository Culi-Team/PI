<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.Teaching.UnitTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views.Teaching"
             mc:Ignorable="d"
             x:Name="root"
             DataContextChanged="root_DataContextChanged"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             Loaded="UserControl_Loaded"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             d:DataContext="{d:DesignInstance Type={x:Type teachingVm:UnitTeachingViewModel}}"
             xmlns:teachingVm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels.Teaching"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="1.15*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="5">   
                <StackPanel x:Name="PositionTeaching_StackPanel">
                </StackPanel>
            </ScrollViewer>
            <Image Grid.Column="2"
                   Source="{Binding Image}">

            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0"
                    Grid.ColumnSpan="2">
                <GroupBox Header="Cylinder"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Style="{StaticResource TextBlockHeaderGroupBox}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Cylinders}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="6"
                                                 VerticalAlignment="Top" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl
                                                Content="{Binding .}"
                                                Margin="3"
                                                Height="150"
                                                Width="170"/>       
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Border>

            <Border Grid.Column="2"
                    Grid.RowSpan="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <GroupBox Header="Input"
                  Grid.Column="0"
                  Style="{StaticResource TextBlockHeaderGroupBox}">
                            <ItemsControl ItemsSource="{Binding Inputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DInputView Width="300"
                                       DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                        <!-- Output Section -->
                        <GroupBox Header="Output"
                  Style="{StaticResource TextBlockHeaderGroupBox}"
                  Grid.Column="1">
                            <ItemsControl ItemsSource="{Binding Outputs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:DOutputView Width="300"
                                       DataContext="{Binding }" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1"
                    Grid.ColumnSpan="2">
                <GroupBox Header="Motions"
                          Style="{StaticResource TextBlockHeaderGroupBox}">
                    <ScrollViewer>
                        <ItemsControl x:Name="MotionItemsControl"
                                      ItemsSource="{Binding Motions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid VerticalAlignment="Top"
                                                 HorizontalAlignment="Left"
                                                 Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:MotionView DataContext="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>
