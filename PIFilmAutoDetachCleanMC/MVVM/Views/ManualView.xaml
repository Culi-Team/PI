<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.ManualView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:uc="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DataContext="{d:DesignInstance Type=vm:ManualViewModel}"
             xmlns:uiControls="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             mc:Ignorable="d"
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="AutoWidthTabItemStyle"
               TargetType="{x:Type TabItem}"
               BasedOn="{StaticResource {x:Type TabItem}}">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4,0,0,4" 
                                    Margin="{TemplateBinding Margin}">
                                <ContentPresenter x:Name="ContentSite" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center" 
                                                ContentSource="Header" 
                                                Margin="{TemplateBinding Padding}" 
                                                RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        
                        <!-- Main Tab-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#64B5F6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                            
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#42A5F5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style Main TabControl (Left) -->
        <Style x:Key="MainTabControlStyle" TargetType="{x:Type TabControl}">
            <Setter Property="ItemContainerStyle" Value="{StaticResource AutoWidthTabItemStyle}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="True" KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Header tab -->
                            <Border Grid.Column="0" Grid.Row="0" Background="Transparent" Padding="10,8" Margin="0,0,0,5">
                                <TextBlock Text="Unit" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="Black" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            
                            <!-- Tab items -->
                            <UniformGrid Columns="1" Rows="20" IsItemsHost="True" Grid.Column="0" Grid.Row="1"/>
                            
                            <!-- Content area -->
                            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    KeyboardNavigation.DirectionalNavigation="Contained">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Sub TabControl (TOP) -->
        <Style x:Key="SubTabControlStyle" TargetType="{x:Type TabControl}">
            <Setter Property="ItemContainerStyle" Value="{StaticResource AutoWidthTabItemStyle}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="True" KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*" />
                                <RowDefinition Height="90*" />
                            </Grid.RowDefinitions>

                            <!-- Tabs -->
                            <UniformGrid x:Name="HeaderPanel"
                                         IsItemsHost="True" />

                            <!-- Content -->
                            <Border Grid.Row="1"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    KeyboardNavigation.DirectionalNavigation="Contained">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  Margin="{TemplateBinding Padding}" />
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Top -->
                            <Trigger Property="TabStripPlacement"
                                     Value="Top">
                                <Setter TargetName="HeaderPanel"
                                        Property="Rows"
                                        Value="1" />
                            </Trigger>

                            <!-- Bottom -->
                            <Trigger Property="TabStripPlacement"
                                     Value="Bottom">
                                <Setter TargetName="HeaderPanel"
                                        Property="Rows"
                                        Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Column="0"
                    TabStripPlacement="Left"
                    Style="{StaticResource MainTabControlStyle}">
            <TabItem Header="CSTLoadUnload" Width="200">
                <TabControl Style="{StaticResource SubTabControlStyle}">
                    <TabItem Header="In Conveyor">
                        <local:ManualUnitView Motions="{Binding InConveyorMotions}" 
                                             Cylinders="{Binding InConveyorCylinders}" 
                                             Inputs="{Binding InConveyorInputs}" 
                                             Outputs="{Binding InConveyorOutputs}"
                                             SpeedControllers="{Binding InConveyorSpeedControllers}"/>
                    </TabItem>
                    <TabItem Header="In Work Conveyor">
                        <local:ManualUnitView Motions="{Binding InWorkConveyorMotions}" 
                                             Cylinders="{Binding InWorkConveyorCylinders}" 
                                             Inputs="{Binding InWorkConveyorInputs}" 
                                             Outputs="{Binding InWorkConveyorOutputs}"/>
                    </TabItem>
                    <TabItem Header="Buffer Conveyor">
                        <local:ManualUnitView Motions="{Binding BufferConveyorMotions}" 
                                             Cylinders="{Binding BufferConveyorCylinders}" 
                                             Inputs="{Binding BufferConveyorInputs}" 
                                             Outputs="{Binding BufferConveyorOutputs}"
                                             SpeedControllers="{Binding BufferConveyorSpeedControllers}"/>
                    </TabItem>
                    <TabItem Header="Out Work Conveyor">
                        <local:ManualUnitView Motions="{Binding OutWorkConveyorMotions}" 
                                             Cylinders="{Binding OutWorkConveyorCylinders}" 
                                             Inputs="{Binding OutWorkConveyorInputs}" 
                                             Outputs="{Binding OutWorkConveyorOutputs}"/>
                    </TabItem>
                    <TabItem Header="Out Conveyor">
                        <local:ManualUnitView Motions="{Binding OutConveyorMotions}" 
                                             Cylinders="{Binding OutConveyorCylinders}" 
                                             Inputs="{Binding OutConveyorInputs}" 
                                             Outputs="{Binding OutConveyorOutputs}"
                                             SpeedControllers="{Binding OutConveyorSpeedControllers}"/>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Detach"
                     Width="200">
                <TabControl Style="{StaticResource SubTabControlStyle}">
                    <TabItem Header="Vinyl Clean">
                        <local:ManualUnitView Motions="{Binding VinylCleanMotions}" 
                                             Cylinders="{Binding VinylCleanCylinders}" 
                                             Inputs="{Binding VinylCleanInputs}" 
                                             Outputs="{Binding VinylCleanOutputs}"/>
                    </TabItem>
                    <TabItem Header="Robot Load">
                        <local:ManualUnitView Motions="{Binding RobotLoadMotions}" 
                                             Cylinders="{Binding RobotLoadCylinders}" 
                                             Inputs="{Binding RobotLoadInputs}" 
                                             Outputs="{Binding RobotLoadOutputs}"/>
                    </TabItem>
                    <TabItem Header="Fixture Align">
                        <local:ManualUnitView Motions="{Binding FixtureAlignMotions}" 
                                             Cylinders="{Binding FixtureAlignCylinders}" 
                                             Inputs="{Binding FixtureAlignInputs}" 
                                             Outputs="{Binding FixtureAlignOutputs}"/>
                    </TabItem>
                    <TabItem Header="Transfer Fixture">
                        <local:ManualUnitView Motions="{Binding TransferFixtureMotions}" 
                                             Cylinders="{Binding TransferFixtureCylinders}" 
                                             Inputs="{Binding TransferFixtureInputs}" 
                                             Outputs="{Binding TransferFixtureOutputs}"/>
                    </TabItem>
                    <TabItem Header="Remove Film">
                        <local:ManualUnitView Motions="{Binding RemoveFilmMotions}" 
                                             Cylinders="{Binding RemoveFilmCylinders}" 
                                             Inputs="{Binding RemoveFilmInputs}" 
                                             Outputs="{Binding RemoveFilmOutputs}"/>
                    </TabItem>
                    <TabItem Header="Detach">
                        <local:ManualUnitView Motions="{Binding DetachMotions}" 
                                             Cylinders="{Binding DetachCylinders}" 
                                             Inputs="{Binding DetachInputs}" 
                                             Outputs="{Binding DetachOutputs}"/>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Clean"
                     Width="200">
                <TabControl Style="{StaticResource SubTabControlStyle}">
                    <TabItem Header="Glass Transfer">
                        <local:ManualUnitView Motions="{Binding GlassTransferMotions}" 
                                             Cylinders="{Binding GlassTransferCylinders}" 
                                             Inputs="{Binding GlassTransferInputs}" 
                                             Outputs="{Binding GlassTransferOutputs}"/>
                    </TabItem>
                    <TabItem Header="Glass Align">
                        <local:ManualUnitView Motions="{Binding GlassAlignMotions}" 
                                             Cylinders="{Binding GlassAlignCylinders}" 
                                             Inputs="{Binding GlassAlignInputs}" 
                                             Outputs="{Binding GlassAlignOutputs}"/>
                    </TabItem>
                    <TabItem Header="Transfer In Shuttle">
                        <local:ManualUnitView Motions="{Binding TransferInShuttleMotions}" 
                                             Cylinders="{Binding TransferInShuttleCylinders}" 
                                             Inputs="{Binding TransferInShuttleInputs}" 
                                             Outputs="{Binding TransferInShuttleOutputs}"/>
                    </TabItem>
                    <TabItem Header="Wet Clean">
                        <local:ManualUnitView Motions="{Binding TransferRotationMotions}" 
                                             Cylinders="{Binding TransferRotationCylinders}" 
                                             Inputs="{Binding TransferRotationInputs}" 
                                             Outputs="{Binding TransferRotationOutputs}"/>
                    </TabItem>
                    <TabItem Header="AF Clean">
                        <local:ManualUnitView Motions="{Binding TransferRotationMotions}" 
                                             Cylinders="{Binding TransferRotationCylinders}" 
                                             Inputs="{Binding TransferRotationInputs}" 
                                             Outputs="{Binding TransferRotationOutputs}"/>
                    </TabItem>
                    <TabItem Header="Transfer Rotation">
                        <local:ManualUnitView Motions="{Binding TransferRotationMotions}" 
                                             Cylinders="{Binding TransferRotationCylinders}" 
                                             Inputs="{Binding TransferRotationInputs}" 
                                             Outputs="{Binding TransferRotationOutputs}"/>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Unload"
                     Width="200">
                <TabControl Style="{StaticResource SubTabControlStyle}">
                    <TabItem Header="Unload Transfer">
                        <local:ManualUnitView Motions="{Binding UnloadTransferMotions}" 
                                             Cylinders="{Binding UnloadTransferCylinders}" 
                                             Inputs="{Binding UnloadTransferInputs}" 
                                             Outputs="{Binding UnloadTransferOutputs}"/>
                    </TabItem>
                    <TabItem Header="Unload Align">
                        <local:ManualUnitView Motions="{Binding UnloadAlignMotions}" 
                                             Cylinders="{Binding UnloadAlignCylinders}" 
                                             Inputs="{Binding UnloadAlignInputs}" 
                                             Outputs="{Binding UnloadAlignOutputs}"/>
                    </TabItem>
                    <TabItem Header="Robot Unload">
                        <local:ManualUnitView Motions="{Binding RobotUnloadMotions}" 
                                             Cylinders="{Binding RobotUnloadCylinders}" 
                                             Inputs="{Binding RobotUnloadInputs}" 
                                             Outputs="{Binding RobotUnloadOutputs}"/>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>

        <DockPanel Grid.Column="1">
            <GroupBox Header="SPEED CONTROL"
                      DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Speed:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Speed}" 
                                 Width="100" 
                                 HorizontalAlignment="Left"
                                 Margin="0,5"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="MOTION"
                      DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="26"
                                 Height="26"
                                 Fill="{Binding MotionsInovanceIsConnected,Converter={StaticResource BooleanToOnOffBrushConverter}}"
                                 Stroke="{StaticResource PrimaryBorderBrush}"
                                 StrokeThickness="1"
                                 Margin="0 0 5 0" />
                        <uiControls:ImageButton Grid.Column="1"
                                                Content="Motions Inovance"
                                                Command="{Binding ConnectMotionCommand}"
                                                Height="40"
                                                Margin="0 5 0 0" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="26"
                                 Height="26"
                                 Fill="{Binding MotionAjinIsConnected, Converter={StaticResource BooleanToOnOffBrushConverter}}"
                                 Stroke="{StaticResource PrimaryBorderBrush}"
                                 StrokeThickness="1"
                                 Margin="0 0 5 0" />
                        <uiControls:ImageButton Grid.Column="1"
                                                Content="Motion Ajin"
                                                Command="{Binding MotionAjinConnectCommand}"
                                                Height="40"
                                                Margin="0 5 0 0" />
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="ROBOT"
                      DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="26"
                                 Height="26"
                                 Fill="{Binding RobotLoadIsConnected,Converter={StaticResource BooleanToOnOffBrushConverter}}"
                                 Stroke="{StaticResource PrimaryBorderBrush}"
                                 StrokeThickness="1"
                                 Margin="0 0 5 0" />
                        <uiControls:ImageButton Grid.Column="1"
                                                Content="Robot Load"
                                                Command="{Binding RobotLoadConnectCommand}"
                                                Height="40"
                                                Margin="0 5 0 0" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="26"
                                 Height="26"
                                 Fill="{Binding RobotUnloadIsConnected, Converter={StaticResource BooleanToOnOffBrushConverter}}"
                                 Stroke="{StaticResource PrimaryBorderBrush}"
                                 StrokeThickness="1"
                                 Margin="0 0 5 0" />
                        <uiControls:ImageButton Grid.Column="1"
                                                Content="Robot Unload"
                                                Command="{Binding RobotUnloadConnectCommand}"
                                                Height="40"
                                                Margin="0 5 0 0" />
                    </Grid>
                </StackPanel>
            </GroupBox>

        </DockPanel>
    </Grid>
</UserControl>
