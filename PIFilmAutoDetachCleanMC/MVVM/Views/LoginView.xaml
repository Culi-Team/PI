<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:PIFilmAutoDetachCleanMC.Controls"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:LoginViewModel}}"
             xmlns:uiControls="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding LoginCommand}" Key="Enter" />
    </UserControl.InputBindings>
    <Grid>
        <StackPanel Width="350"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

            <Label Content="{DynamicResource str_UserGroup}"
                   FontWeight="Bold" />

            <ComboBox Tag="{DynamicResource str_UserGroup}"
                      VerticalContentAlignment="Center"
                      HorizontalContentAlignment="Center"
                      Height="40"
                      ItemsSource="{Binding Accesses, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      SelectedValue="{Binding AccessSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

            <Label FontWeight="Bold"
                   Margin="0 10 0 0"
                   Content="{DynamicResource str_Password}" />

            <!--<components:BindablePasswordBox Width="350"
                                            Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            PreviewMouseDown="PasswordBox_PreviewMouseDown"
                                            VerticalContentAlignment="Center" />-->
            <PasswordBox VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Name="passwordBox"
                         Height="40">
                <PasswordBox.Style>
                    <Style TargetType="{x:Type PasswordBox}">
                        <Style.Setters>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border BorderBrush="{StaticResource PrimaryBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              HorizontalScrollBarVisibility="Hidden"
                                                              VerticalScrollBarVisibility="Hidden" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style.Setters>
                    </Style>
                </PasswordBox.Style>
            </PasswordBox>

            <uiControls:ImageButton Margin="0 10 0 0"
                                    Content="{DynamicResource str_Login}"
                                    Height="60"
                                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>

</UserControl>
