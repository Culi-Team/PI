<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.TeachView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             IsEnabled="{Binding MachineStatus.IsStandByProcessMode}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:TeachViewModel}"
             x:Name="root">
    <UserControl.Resources>
        <cvt:BoolToBrushConverter x:Key="BoolToBrushConverter" />

        <Style x:Key="AutoWidthTabItemStyle"
               TargetType="{x:Type TabItem}"
               BasedOn="{StaticResource {x:Type TabItem}}">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4,0,0,4" 
                                    Margin="{TemplateBinding Margin}">
                                <ContentPresenter x:Name="ContentSite" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center" 
                                                ContentSource="Header" 
                                                Margin="{TemplateBinding Padding}" 
                                                RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Trạng thái đã chọn (Selected) - Tab chính -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                            
                            <!-- Trạng thái hover (IsMouseOver) - Tab chính -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#64B5F6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            
                            <!-- Trạng thái bình thường - Tab chính -->
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                            
                            <!-- Hiệu ứng khi focus - Tab chính -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#42A5F5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="ItemContainerStyle" Value="{StaticResource AutoWidthTabItemStyle}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="True" KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Header trong cột tab -->
                            <Border Grid.Column="0" Grid.Row="0" Background="Transparent" Padding="10,8" Margin="0,0,0,5">
                                <TextBlock Text="Unit" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="Black" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            
                            <!-- Tab items -->
                            <UniformGrid Columns="1" Rows="20" IsItemsHost="True" Grid.Column="0" Grid.Row="1"/>
                            
                            <!-- Content area -->
                            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    KeyboardNavigation.DirectionalNavigation="Contained">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CSTLoadUnload Tab Templates -->
        <DataTemplate x:Key="InWorkConveyorTemplate">
            <local:UnitTeachingView 
                Cylinders="{Binding DataContext.InWorkConveyorCylinders, ElementName=root}"
                Motions="{Binding DataContext.InWorkConveyorMotions, ElementName=root}"
                Outputs="{Binding DataContext.InWorkConveyorOutputs, ElementName=root}"
                Inputs="{Binding DataContext.InWorkConveyorInputs, ElementName=root}"
                TeachingImage="{StaticResource LoadWorkCassetteStageImage}"
                SelectedProcess="{Binding DataContext.SelectedProcess, ElementName=root}"
                TeachViewModel="{Binding DataContext, ElementName=root}"/>
        </DataTemplate>

