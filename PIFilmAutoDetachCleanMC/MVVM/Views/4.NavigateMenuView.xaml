<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.NavigateMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:language="clr-namespace:PIFilmAutoDetachCleanMC.Language"
             d:DataContext="{d:DesignInstance Type=vm:NavigateMenuViewModel}"
             d:DesignHeight="70" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="{x:Type ui:ImageRadioButton}"
           BasedOn="{StaticResource {x:Type ui:ImageRadioButton}}">
            <Style.Setters>
                <Setter Property="Padding"
                    Value="5 15" />
                <Setter Property="Margin"
                    Value="3" />
                <Setter Property="Width"
                    Value="90" />
                <Setter Property="FontSize"
                    Value="11" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ItemsControl ItemsSource="{Binding NavigationButtons}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:ImageRadioButton
                        GroupName="VMNavigateButton"
                        Content="{Binding Label}"
                        Command="{Binding Command}"
                        DisabledImage="{Binding DisabledImageKey, Converter={StaticResource ImageKeyToImageConverter}}"
                        Image="{Binding ImageKey, Converter={StaticResource ImageKeyToImageConverter}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Left"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <ui:LogDisplayer d:Width="200"
            Grid.Column="1"
            Margin="20 3"/>

        <StackPanel Orientation="Horizontal"
                DockPanel.Dock="Right"
                Grid.Column="2">
