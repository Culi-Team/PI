            <ui:ImageRadioButton
                GroupName="VMNavigateButton"
                Content="Log"
                Command="{Binding LogNavigate}"
                DisabledImage="{StaticResource image_log_normal}"
                Image="{StaticResource image_log_selected}"/>
            <ui:ImageRadioButton GroupName="VMNavigateButton"
                                 Content="Exit"
                                 Image="{StaticResource image_exit_normal}"
                                 DisabledImage="{StaticResource image_exit_selected}"
                                 Command="{Binding ApplicationCloseCommand}" />
        </StackPanel>
