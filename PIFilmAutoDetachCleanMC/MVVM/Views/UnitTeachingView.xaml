<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.UnitTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:motion="clr-namespace:EQX.Motion;assembly=EQX.Motion"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <cvt:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        <cvt:VacuumListConverter x:Key="VacuumListConverter" />
        <DataTemplate DataType="{x:Type motion:MotionBase}">
            <ui:JogView Margin="5" 
                       MaxWidth="290"/>
        </DataTemplate>

        <!-- Style cho Border với GroupBox -->
        <Style x:Key="GroupBoxBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style cho GroupBox với ScrollViewer -->
        <Style x:Key="ScrollableGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="1 0 1 0"/>
        </Style>

        <!-- Style cho ItemsControl với Grid 1 cột -->
        <Style x:Key="UniformItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Grid.Row="0">
                            <ContentControl Content="{Binding .}" 
                                          HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Stretch"
                                          Margin="5"/>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ItemsControl hiển thị horizontal -->
        <Style x:Key="HorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding .}" 
                                      HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Stretch"
                                      Margin="5"
                                      MinWidth="200"
                                      MaxWidth="300"
                                      MinHeight="200"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ItemsControl với UniformGrid 3 cột -->
        <Style x:Key="ThreeColumnItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding .}" Margin="3 0"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ItemsControl Input/Output -->
        <Style x:Key="InputOutputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding .}" Margin="5 0 5 10"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- Image Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Image" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Motion Section -->
        <Border Grid.Row="1" Grid.Column="0">
            <Border.Style>
                <Style TargetType="Border" BasedOn="{StaticResource GroupBoxBorderStyle}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Motions.Count, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <GroupBox Header="Motion" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Margin="0 5 0 0">
                    <ItemsControl x:Name="MotionItemsControl" 
                                ItemsSource="{Binding Motions, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                Style="{StaticResource HorizontalItemsControlStyle}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- Position Teaching Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <GroupBox Header="Position Teaching" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <StackPanel>
                        <!-- Debug info -->
                        <TextBlock Text="{Binding SelectedProcess.Name, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, StringFormat='Selected Process: {0}'}" 
                                   Foreground="Blue" FontWeight="Bold" Margin="5"/>
                        
                        <ItemsControl ItemsSource="{Binding PositionTeachings, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                      Margin="5 10 0 0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Height="50">
                                        <Border Width="20"
                                                BorderThickness="1"
                                                CornerRadius="5 0 0 5"
                                                BorderBrush="Black"
                                                Background="{Binding IsActive, Converter={StaticResource BoolToBrushConverter}}">
                                        </Border>
                                        <Button Content="{Binding Name}"
                                                Width="280"
                                                Background="White"
                                                Command="{Binding PositionTeachingCommand}"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border BorderThickness="1"
                                                            BorderBrush="Black"
                                                            CornerRadius="0 5 5 0"
                                                            Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          IsHitTestVisible="True" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Effect>
                                                <DropShadowEffect Color="Silver"
                                                                  Opacity="0.5"
                                                                  BlurRadius="3" />
                                            </Button.Effect>
                                        </Button>
                                    </StackPanel>
                                    <UniformGrid Grid.Column="1"
                                                 HorizontalAlignment="Right">
                                        <ui:ImageButton Content="{DynamicResource str_Save}"
                                                        Command="{Binding SaveRecipeCommand}"
                                                        Image="{StaticResource image_save_all_selected}"
                                                        Margin="2"
                                                        Height="50"
                                                        Width="110" />
                                    </UniformGrid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- In Out Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="2">
            <GroupBox Header="In Out" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!-- Input Section -->
                        <StackPanel>
                            <TextBlock Text="Input" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Inputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>

                        <!-- Output Section -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Output" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Outputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- Cylinder Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="1" Grid.Column="2">
            <GroupBox Header="Cylinder" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <ItemsControl ItemsSource="{Binding Cylinders, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                        Style="{StaticResource ThreeColumnItemsControlStyle}"/>
                </ScrollViewer>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>