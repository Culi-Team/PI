<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.UnitTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:motion="clr-namespace:EQX.Motion;assembly=EQX.Motion"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Converters -->
        <cvt:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        <cvt:VacuumListConverter x:Key="VacuumListConverter" />
        
        <!-- DataTemplates -->
        <DataTemplate DataType="{x:Type motion:MotionBase}">
            <ui:MovingView Margin="5" MaxWidth="290"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inout:CylinderBase}">
            <ui:CylinderView/>
        </DataTemplate>

        <!-- Common Styles -->
        <Style x:Key="GroupBoxBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ScrollableGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="1 0 1 0"/>
        </Style>
        <Style x:Key="HorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5" MinWidth="200" MaxWidth="300" MinHeight="200"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputOutputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5 0 5 10"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- Image Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="2">
            <GroupBox Header="Image" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <TextBlock Text="Image" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </GroupBox>
        </Border>

        <!-- Motion Section -->
        <Border Grid.Row="1" Grid.Column="0">
            <Border.Style>
                <Style TargetType="Border" BasedOn="{StaticResource GroupBoxBorderStyle}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Motions.Count, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <GroupBox Header="Motion" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Margin="0 5 0 0">
                    <ItemsControl x:Name="MotionItemsControl" 
                                ItemsSource="{Binding Motions, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                Style="{StaticResource HorizontalItemsControlStyle}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"/>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- Position Teaching Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="0" >
            <GroupBox Header="Position Teaching" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <DataGrid x:Name="PositionTeachingDataGrid"
                              ItemsSource="{Binding PositionTeachings, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              IsReadOnly="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F5F5F5"
                              RowHeaderWidth="0"
                              Margin="5">
                        
                        <!-- Remove row selection highlighting -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <!-- Position Name -->
                            <DataGridTextColumn Header="Position Name" Binding="{Binding Name}" Width="250" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Motion Name -->
                            <DataGridTextColumn Header="Motion" Binding="{Binding Motion.Name}" Width="200" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Background" Value="#E8F4FD"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Current Position -->
                            <DataGridTextColumn Header="Current Position" Binding="{Binding Motion.Status.ActualPosition, StringFormat=F3}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Background" Value="#E8F4FD"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Target Position (Editable) -->
                            <DataGridTextColumn Header="Target Position" Binding="{Binding Position, StringFormat=F3}" Width="100" IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Background" Value="#FFF2CC"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Status Indicator -->
                            <DataGridTemplateColumn Header="Status" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="LightGray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Fill" Value="LimeGreen"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Move To Button -->
                            <DataGridTemplateColumn Header="Move To" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Move" Command="{Binding PositionTeachingCommand}"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Padding="8,4" Margin="2" Background="#4CAF50" Foreground="White"
                                                BorderThickness="0" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Save Button -->
                            <DataGridTemplateColumn Header="Save" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Save" Command="{Binding SaveRecipeCommand}"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Padding="8,4" Margin="2" Background="#2196F3" Foreground="White"
                                                BorderThickness="0" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- In Out Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="1" Grid.Column="2">
            <GroupBox Header="In Out" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <StackPanel>
                            <TextBlock Text="Input" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Inputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                        <!-- Output Section -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Output" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Outputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- Cylinder Section -->
        <!--<Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="1" Grid.Column="1">
            <GroupBox Header="Cylinder" Style="{StaticResource ScrollableGroupBoxStyle}" >
                    <UniformGrid  Rows="1">
                        <ItemsControl ItemsSource="{Binding Cylinders, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                        Style="{StaticResource ColumnItemsControlStyle}"/>
                    </UniformGrid>
            </GroupBox>
        </Border>-->
    </Grid>
</UserControl>