<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.UnitTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             xmlns:cvt="clr-namespace:PIFilmAutoDetachCleanMC.Converters"
             xmlns:ui="clr-namespace:EQX.UI.Controls;assembly=EQX.UI"
             xmlns:motion="clr-namespace:EQX.Motion;assembly=EQX.Motion"
             xmlns:inout="clr-namespace:EQX.InOut;assembly=EQX.InOut"
             xmlns:converter="clr-namespace:EQX.UI.Converters;assembly=EQX.UI"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Converters -->
        <cvt:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        <cvt:VacuumListConverter x:Key="VacuumListConverter" />
        <cvt:PositionComparisonConverter x:Key="PositionComparisonConverter" />
        <cvt:CylinderButtonBrushConverter x:Key="CylinderButtonBrushConverter" />
        <converter:CylinderTypeToButtonNameConverter x:Key="CylinderTypeToButtonNameConverter" />
        <converter:BooleanToOnOffBrushConverter x:Key="BooleanToOnOffBrushConverter" />
        
        <!-- Common Styles -->
        <!-- MotionStyle-->
        <Style x:Key="MontionControlStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="Height" Value="150"/>
        </Style>
        <!-- CylinderStyle-->
        <Style x:Key="CylinderControlStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="Height" Value="85"/>
        </Style>
        <!-- DataTemplates -->
        <DataTemplate DataType="{x:Type inout:CylinderBase}">
            <ui:CylinderView/>
        </DataTemplate>

        <!-- Common Styles -->
        <Style x:Key="GroupBoxBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="ScrollableGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="1 0 1 0"/>
        </Style>
        
        <Style x:Key="HorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5" MinWidth="200" MaxWidth="300" MinHeight="200"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputOutputItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" Margin="5 0 5 10"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cylinder Button Style - Modern Style -->
        <Style x:Key="CylinderButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF6B6B6B"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF4A4A4A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            
                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Cylinder Template with InOut Style Buttons -->
        <DataTemplate x:Key="CylinderInOutTemplate" DataType="{x:Type inout:CylinderBase}">
            <Border Style="{StaticResource CylinderControlStyle}">
                <StackPanel>
                    <!-- Cylinder Name -->
                    <TextBlock Text="{Binding Name}" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Foreground="Black"
                               Margin="0,0,0,5"/>
                    <!-- Modern Cylinder Buttons -->
                    <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Center">
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=true}" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}" 
                                BorderBrush="{Binding IsForward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Click="CylinderForward_Click"/>
                        <Button Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=false}" 
                                Style="{StaticResource CylinderButtonStyle}"
                                Background="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}" 
                                BorderBrush="{Binding IsBackward, Converter={StaticResource CylinderButtonBrushConverter}}"
                                Click="CylinderBackward_Click"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="550"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="260"/>
        </Grid.RowDefinitions>
        
        <!-- Image Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
            <GroupBox Header="Image" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <Image Source="{Binding TeachingImage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Stretch="Uniform"/>
            </GroupBox>
        </Border>

        <!-- Motion Section -->

        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
            <GroupBox Header="Motion" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Margin="0 5 0 0">
                    <ItemsControl x:Name="MotionItemsControl" 
                              ItemsSource="{Binding Motions, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource MontionControlStyle}">
                                    <ui:MovingView Motion="{Binding .}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </ScrollViewer>
            </GroupBox>
        </Border>
        <!-- Cylinder Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <GroupBox Header="Cylinder" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Cylinders, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                  ItemTemplate="{StaticResource CylinderInOutTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Border>

            <!-- Position Teaching Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
            <GroupBox Header="Position Teaching" Style="{StaticResource ScrollableGroupBoxStyle}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <DataGrid x:Name="PositionTeachingDataGrid"
                              ItemsSource="{Binding PositionTeachings, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              IsReadOnly="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F5F5F5"
                              RowHeaderWidth="0"
                              Margin="5">

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.RowHeaderStyle>
                            <Style TargetType="DataGridRowHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowHeaderStyle>
                        
                        <DataGrid.Columns>
                            <!-- Position Name -->
                            <DataGridTextColumn Header="Position Name" Binding="{Binding Name}" Width="270" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Motion Name -->
                            <DataGridTextColumn Header="Motion" Binding="{Binding Motion.Name}" Width="165" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Background" Value="#E8F4FD"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Current Position -->
                            <DataGridTextColumn Header="Current Position" Binding="{Binding Motion.Status.ActualPosition, StringFormat=F3}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Target Position (Click to Edit) -->
                            <DataGridTemplateColumn Header="Target Position" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="EditPosition_Click"
                                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                FontFamily="Consolas" Background="#E8F4FD" Padding="5,2"
                                                BorderThickness="0" BorderBrush="Transparent" FontWeight="SemiBold"
                                                Cursor="Hand" ToolTip="Click to edit position">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="{Binding Position, StringFormat=F3}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Position}" Value="0">
                                                            <Setter Property="Content" Value="0.000"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status Indicator -->
                            <DataGridTemplateColumn Header="Status" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#F44336"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource PositionComparisonConverter}">
                                                                    <Binding Path="Motion.Status.ActualPosition"/>
                                                                    <Binding Path="Position"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Fill" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Move To Button -->
                            <DataGridTemplateColumn Header="Move To" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Move" Command="{Binding PositionTeachingMoveCommand}"
                                                CommandParameter="{Binding TeachViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                                Padding="17,4" Margin="2" Background="YellowGreen" Foreground="White"
                                                BorderThickness="0" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Get from Motion Button -->
                            <DataGridTemplateColumn Header="GetCurentPos" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="GetCurentPos" Click="GetMotionPosition_Click"
                                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                                FontSize="9" FontWeight="SemiBold" Background="#FF9800" Foreground="White"
                                                Padding="10,6" Margin="2" BorderThickness="0" Cursor="Hand"
                                                ToolTip="Get current position from motion"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Save Button -->
                            <DataGridTemplateColumn Header="Save" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Save" Command="{Binding SaveRecipeCommand}"
                                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                                Padding="21,4" Margin="2" Background="#4CAF50" Foreground="White"
                                                BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"
                                                ToolTip="Save position to recipe"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </GroupBox>
        </Border>

        <!-- In Out Section -->
        <Border Style="{StaticResource GroupBoxBorderStyle}" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2">
            <GroupBox Header="In Out" Style="{StaticResource ScrollableGroupBoxStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Input Section -->
                        <StackPanel>
                            <TextBlock Text="Input" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Inputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                        <!-- Output Section -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Output" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Outputs, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                          Style="{StaticResource InputOutputItemsControlStyle}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>