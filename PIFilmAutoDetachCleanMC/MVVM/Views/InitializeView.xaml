<UserControl x:Class="PIFilmAutoDetachCleanMC.MVVM.Views.InitializeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.Views"
             xmlns:vm="clr-namespace:PIFilmAutoDetachCleanMC.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:InitializeViewModel}"
             d:DesignHeight="1080"
             d:DesignWidth="1920">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Style.Setters>
                <Setter Property="BorderBrush"
                        Value="Green" />
                <Setter Property="BorderThickness"
                        Value="3" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="FontSize"
                        Value="12" />
                <Setter Property="FontFamily"
                        Value="Arial" />
                <Setter Property="FontWeight"
                        Value="SemiBold" />
                <Setter Property="Width"
                        Value="160" />
                <Setter Property="Height"
                        Value="80" />
                <EventSetter Event="PreviewMouseDown"
                             Handler="Label_PreviewMouseDown" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Background="White">
            <Viewbox Stretch="Uniform">
                <Grid>
                    <Image Source="{StaticResource AutoViewImage}"
                           Stretch="Fill"
                           Opacity="1" />
                </Grid>
            </Viewbox>
        </Border>
        <Canvas Grid.Row="0">
            <Label Content="IN CONVEYOR"
                   Background="{Binding ProcessInitSelect.IsInConveyorInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="20"
                   Canvas.Top="550" />

            <Label Content="OUT CONVEYOR"
                   Background="{Binding ProcessInitSelect.IsOutConveyorInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="20"
                   Canvas.Top="190" />

            <Label Content="OUT WORK CONVEYOR"
                   Background="{Binding ProcessInitSelect.IsOutWorkConveyorInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="240"
                   Canvas.Top="190" />

            <Label Content="BUFFER CONVEYOR"
                   Background="{Binding ProcessInitSelect.IsBufferConveyorInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="240"
                   Canvas.Top="380" />

            <Label Content="IN WORK CONVEYOR"
                   Background="{Binding ProcessInitSelect.IsInWorkConveyorInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="240"
                   Canvas.Top="550" />

            <Label Content="VINYL CLEAN"
                   Background="{Binding ProcessInitSelect.IsVinylCleanInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="430"
                   Canvas.Top="580" />

            <Label Content="FIXTURE ALIGN"
                   Background="{Binding ProcessInitSelect.IsFixtureAlignInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="600"
                   Canvas.Top="550" />

            <Label Content="DETACH"
                   Background="{Binding ProcessInitSelect.IsDetachInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="650"
                   Canvas.Top="380" />

            <Label Content="REMOVE FILM"
                   Background="{Binding ProcessInitSelect.IsRemoveFilmInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="600"
                   Canvas.Top="220" />

            <Label Content="ROBOT LOAD"
                   Background="{Binding ProcessInitSelect.IsRobotLoadInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="430"
                   Canvas.Top="380" />

            <Label Content="TRANSFER FIXTURE"
                   Background="{Binding ProcessInitSelect.IsTransferFixtureInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="430"
                   Canvas.Top="280" />

            <Label Content="TR IN SHUTTLE LEFT"
                   Background="{Binding ProcessInitSelect.IsTransferInShuttleLeftInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="880"
                   Canvas.Top="180" />

            <Label Content="GLASS ALIGN LEFT"
                   Background="{Binding ProcessInitSelect.IsGlassAlignLeftInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="880"
                   Canvas.Top="280" />

            <Label Content="GLASS ALIGN RIGHT"
                   Background="{Binding ProcessInitSelect.IsGlassAlignRightInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="880"
                   Canvas.Top="480" />

            <Label Content="TR IN SHUTTLE RIGHT"
                   Background="{Binding ProcessInitSelect.IsTransferInShuttleRightInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="880"
                   Canvas.Top="580" />

            <Label Content="GLASS TRANSFER"
                   Background="{Binding ProcessInitSelect.IsGlassTransferInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1020"
                   Canvas.Top="380" />

            <Label Content="WET CLEAN LEFT"
                   Background="{Binding ProcessInitSelect.IsWetCleanLeftInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1080"
                   Canvas.Top="180" />

            <Label Content="TR ROTATION LEFT"
                   Background="{Binding ProcessInitSelect.IsTransferRotationLeftInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1250"
                   Canvas.Top="180" />

            <Label Content="AF CLEAN LEFT"
                   Background="{Binding ProcessInitSelect.IsAfCleanLeftInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1420"
                   Canvas.Top="180" />

            <Label Content="WET CLEAN RIGHT"
                   Background="{Binding ProcessInitSelect.IsWetCleanRightInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1080"
                   Canvas.Top="580" />

            <Label Content="TR ROTATION RIGHT"
                   Background="{Binding ProcessInitSelect.IsTransferRotationRightInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1250"
                   Canvas.Top="580" />

            <Label Content="AF CLEAN RIGHT"
                   Background="{Binding ProcessInitSelect.IsAfCleanRightInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1420"
                   Canvas.Top="580" />

            <Label Content="ULD TR LEFT"
                   Background="{Binding ProcessInitSelect.IsUnloadTransferLeftInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1590"
                   Canvas.Top="180" />

            <Label Content="ULD TR RIGHT"
                   Background="{Binding ProcessInitSelect.IsUnloadTransferRightInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1590"
                   Canvas.Top="580" />

            <Label Content="ULD ALIGN"
                   Background="{Binding ProcessInitSelect.IsUnloadAlignInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1650"
                   Canvas.Top="380" />

            <Label Content="ULD ROBOT"
                   Background="{Binding ProcessInitSelect.IsUnloadRobotInit,Converter={StaticResource BooleanToBackgroundUnitInitConverter}}"
                   Canvas.Left="1750"
                   Canvas.Top="280" />
        </Canvas>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Height="50"
                    Grid.Row="1">
            <Button Content="Select All"
                    Command="{Binding SelectAllCommand}"
                    Margin="0 0 5 0"
                    Width="200" />
            <Button Content="Unselect All"
                    Command="{Binding UnSelectAllCommand}"
                    Margin="0 0 5 0"
                    Width="200" />
            <Button Content="Initialize"
                    Command="{Binding InitializeCommand}"
                    Width="200" />
        </StackPanel>
    </Grid>
</UserControl>
